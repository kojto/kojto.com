<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Monthly Summary List View -->
    <record id="view_kojto_energy_management_monthly_summary_list" model="ir.ui.view">
        <field name="name">kojto.energy.management.monthly.summary.list</field>
        <field name="model">kojto.energy.management.monthly.summary</field>
        <field name="arch" type="xml">
            <list string="Monthly Energy Summary" class="ko-list-main" create="false" edit="false" delete="false">
                <field name="currency_id" column_invisible="1"/>
                <field name="power_meter_id" width="200"/>
                <field name="year" optional="hide"/>
                <field name="month" optional="hide"/>
                <field name="display_name" optional="show" width="200"/>
                <field name="period_start" optional="hide"/>
                <field name="period_end" optional="hide"/>
                <field name="total_imported_mwh" optional="show"/>
                <field name="total_exported_mwh" optional="show"/>
                <field name="total_imported_value" optional="show" widget="monetary"/>
                <field name="total_exported_value" optional="show" widget="monetary"/>
                <field name="counter_imported_start" optional="hide"/>
                <field name="counter_imported_end" optional="hide"/>
                <field name="counter_exported_start" optional="hide"/>
                <field name="counter_exported_end" optional="hide"/>
                <field name="reading_count" optional="hide"/>
                <field name="avg_power_kw" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Monthly Summary Form View -->
    <record id="view_kojto_energy_management_monthly_summary_form" model="ir.ui.view">
        <field name="name">kojto.energy.management.monthly.summary.form</field>
        <field name="model">kojto.energy.management.monthly.summary</field>
        <field name="arch" type="xml">
            <form string="Monthly Energy Summary" create="false" edit="false" delete="false">
                <sheet>
                    <field name="currency_id" invisible="1"/>
                    <!-- Header Section -->
                    <div class="d-flex justify-content-between align-items-center mb-3 ko-form-main-header-line">
                        <div class="w-100 px-0">
                            <div class="row no-gutters">
                                <div class="col-lg-6 me-0">
                                    <div class="ko-form-view-title">
                                        <field name="power_meter_id" class="ko-form-view-title" readonly="1" options="{'no_create': True, 'no_open': True, 'no_quick_create': True, 'no_quick_edit': True}"/>
                                        <field name="display_name" class="ko-form-view-title" readonly="1"/>
                                    </div>
                                </div>
                                <div class="col-lg-6 d-flex align-items-center justify-content-end py-2 py-md-0">
                                    <button name="action_view_readings" type="object" class="btn fa fa-list" title="View Readings"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <separator class="separator-slim-top"/>

                    <!-- Period Information -->
                    <group>
                        <group string="Period Information">
                            <field name="year"/>
                            <field name="month"/>
                            <field name="period_start"/>
                            <field name="period_end"/>
                        </group>
                        <group string="Statistics">
                            <field name="reading_count"/>
                            <field name="avg_power_kw"/>
                        </group>
                    </group>

                    <separator string="Energy Consumption Summary"/>

                    <!-- Energy Consumption -->
                    <group>
                        <group string="Energy Consumption (MWh)">
                            <field name="total_imported_mwh"/>
                            <field name="total_exported_mwh"/>
                        </group>
                        <group string="Energy Value">
                            <field name="total_imported_value" widget="monetary"/>
                            <field name="total_exported_value" widget="monetary"/>
                        </group>
                    </group>

                    <separator string="Counter Readings"/>

                    <!-- Counter Readings -->
                    <group>
                        <group string="Import Counter (MWh)">
                            <field name="counter_imported_start"/>
                            <field name="counter_imported_end"/>
                        </group>
                        <group string="Export Counter (MWh)">
                            <field name="counter_exported_start"/>
                            <field name="counter_exported_end"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Monthly Summary Search View -->
    <record id="view_kojto_energy_management_monthly_summary_search" model="ir.ui.view">
        <field name="name">kojto.energy.management.monthly.summary.search</field>
        <field name="model">kojto.energy.management.monthly.summary</field>
        <field name="arch" type="xml">
            <search string="Search Monthly Summaries">
                <field name="power_meter_id"/>
                <field name="year"/>
                <field name="month"/>
                <field name="display_name"/>

                <filter string="This Year" name="filter_this_year"
                        domain="[('year', '=', context_today().year)]"/>
                <filter string="Last Year" name="filter_last_year"
                        domain="[('year', '=', context_today().year - 1)]"/>
                <filter string="This Month" name="filter_this_month"
                        domain="[('year', '=', context_today().year), ('month', '=', context_today().month)]"/>
                <filter string="Last Month" name="filter_last_month"
                        domain="[('year', '=', (context_today() - relativedelta(months=1)).year), ('month', '=', (context_today() - relativedelta(months=1)).month)]"/>

                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Power Meter" name="group_power_meter" context="{'group_by': 'power_meter_id'}"/>
                    <filter string="Year" name="group_year" context="{'group_by': 'year'}"/>
                    <filter string="Month" name="group_month" context="{'group_by': 'month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Monthly Summary Action -->
    <record id="action_kojto_energy_management_monthly_summary" model="ir.actions.act_window">
        <field name="name">Monthly Energy Summary</field>
        <field name="res_model">kojto.energy.management.monthly.summary</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_filter_this_year': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No monthly summaries available yet
            </p>
            <p>
                Monthly summaries consolidate power meter readings by month, showing:
                <ul>
                    <li>Total imported/exported energy (MWh)</li>
                    <li>Total energy values (EUR)</li>
                    <li>Counter readings at start/end of period</li>
                </ul>
            </p>
            <p>
                Summaries are automatically generated from power meter readings and update in real-time.
            </p>
        </field>
    </record>
</odoo>
