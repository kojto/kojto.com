<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Task List View -->
    <record id="view_factory_task_list" model="ir.ui.view">
        <field name="name">kojto.factory.tasks.list</field>
        <field name="model">kojto.factory.tasks</field>
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <list class="ko-list-main">
                <field name="active" widget="boolean_toggle" string="Is Active" />
                <field name="name" string="Task Name" />
                <field name="process_id" string="Process" optional="hide" />
                <field name="description" string="Description" />
                <field name="consolidation_field" string="Consolidation Field" />
                <field name="task_priority" string="Priority" />
                <field name="planned_work_hours" string="Required HRS" />
                <field name="actual_work_hours" string="Actual HRS" />
                <field name="required_task_quantity" string="Required Qty" />
                <field name="produced_task_quantity" string="Produced Qty" />
                <field name="task_unit_id" string="Unit" options="{'no_create_edit': True}" />
                <field name="task_weight" string="G (kg)" optional="hide" />
                <field name="task_length" string="L(m)" optional="hide" />
                <field name="task_area" string="A (m²)" optional="hide" />
                <field name="task_volume" string="V (m³)" optional="hide" />
                <field name="progress_percent" string="Progress" widget="percentage" />
                <field name="attachments" widget="many2many" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                <button name="copy_task_row" type="object" class="b-0 text-black bg-transparent fa fa-copy" title="Copy Task" />
            </list>
        </field>
    </record>

    <!-- Task Search View -->
    <record id="view_factory_task_search" model="ir.ui.view">
        <field name="name">kojto.factory.tasks.search</field>
        <field name="model">kojto.factory.tasks</field>
        <field name="arch" type="xml">
            <search string="Tasks">
                <!-- Search fields -->
                <field name="name" string="Task Name" />
                <field name="package_id" string="Package" />
                <field name="process_id" string="Process" />
                <field name="description" string="Description" />
                <field name="material_id" string="Material" />
                <field name="asset_id" string="Asset" />
                <field name="task_priority" string="Priority" />
                <!-- Filters -->
                <filter string="Active" name="active" domain="[('active', '=', True)]" />
                <filter string="Inactive" name="inactive" domain="[('active', '=', False)]" />
                <!-- Group By -->
                <group expand="0" string="Group By">
                    <filter string="Package" name="group_by_package" context="{'group_by': 'package_id'}" />
                    <filter string="Process" name="group_by_process" context="{'group_by': 'process_id'}" />
                    <filter string="Material" name="group_by_material" context="{'group_by': 'material_id'}" />
                    <filter string="Asset" name="group_by_asset" context="{'group_by': 'asset_id'}" />
                    <filter string="Priority" name="group_by_priority" context="{'group_by': 'task_priority'}" />
                    <filter string="Consolidation Field" name="group_by_consolidation_field" context="{'group_by': 'consolidation_field'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- Task Form View -->
    <record id="view_factory_task_form" model="ir.ui.view">
        <field name="name">kojto.factory.tasks.form</field>
        <field name="model">kojto.factory.tasks</field>
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <form string="Task" class="ko-form-main view_kojto_factory_tasks_form">
                <sheet class="ko-form-body">
                    <!-- Header Section -->
                    <div class="d-flex justify-content-between align-items-center mb-3 ko-form-main-header-line">
                        <div class="w-100 px-0">
                            <div class="row no-gutters">
                                <div class="col-lg-4 me-0">
                                    <div class="ko-form-view-title">
                                        <field name="name" class="ko-form-view-title" readonly="1" force_save="1" />
                                    </div>
                                </div>
                                <div class="col-lg-4 d-flex align-items-center">
                                    <field name="package_id" string="Package" class="mx-auto" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" placeholder="Select Package" />
                                </div>
                                <div class="col-lg-4 d-flex align-items-center justify-content-end py-2 py-md-0">
                                    <div class="dropdown ms-2">
                                        <button class="bg-transparent border-0 d-flex align-items-center" type="button" id="dropdownMenuButton" aria-label="Actions" title="Actions">
                                            <i>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder-plus" viewBox="0 0 16 16">
                                                    <path
                                                        d="m.5 3 .04.87a2 2 0 0 0-.342 1.311l.637 7A2 2 0 0 0 2.826 14H9v-1H2.826a1 1 0 0 1-.995-.91l-.637-7A1 1 0 0 1 2.19 4h11.62a1 1 0 0 1 .996 1.09L14.54 8h1.005l.256-2.819A2 2 0 0 0 13.81 3H9.828a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 6.172 1H2.5a2 2 0 0 0-2 2m5.672-1a1 1 0 0 1 .707.293L7.586 3H2.19q-.362.002-.683.12L1.5 2.98a1 1 0 0 1 1-.98z" />
                                                    <path d="M13.5 9a.5.5 0 0 1 .5.5V11h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V12h-1.5a.5.5 0 0 1 0-1H13V9.5a.5.5 0 0 1 .5-.5" />
                                                </svg>
                                            </i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <separator class="separator-slim-top" />
                    <!-- Existing Form Content -->
                    <div class="row">
                        <div class="col-lg-4">
                            <group>
                                <field name="consolidation_field" string="Cons. Field" />
                                <field name="process_id" required="1" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" placeholder="Select Process" />
                                <field name="part_name" string="Part Name" placeholder="Enter Part Name"/>
                                <field name="material_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" invisible="not material_id_is_required" placeholder="Select Material"/>
                                <field name="asset_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" invisible="not asset_id_is_required" placeholder="Select Asset" />
                                <field name="thickness" invisible="not thickness_is_required" placeholder="Enter Thickness" />
                                <field name="task_priority" placeholder="Select Priority" />
                                <field name="active" widget="boolean_toggle" string="Is Active" />
                            </group>
                            <div>
                                <field name="description" nolabel="1" placeholder="Enter Description" />
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <group>
                                <field name="planned_work_hours" string="Planned Work Hours" />
                                <field name="actual_work_hours" string="Actual Work Hours" readonly="1" />
                                <field name="required_task_quantity" string="Required Qty" required="1" />
                                <field name="produced_task_quantity" string="Produced Qty" readonly="1" />
                                <field name="task_unit_id" string="Unit" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                <field name="task_weight" string="Task Weight (kg)" />
                                <field name="task_length" string="Task Length (m)" />
                                <field name="task_area" string="Task Area (m²)" />
                                <field name="task_volume" string="Task Volume (m³)" />
                                <field name="progress_percent" string="Progress" widget="percentage" readonly="1" />
                            </group>
                        </div>
                        <div class="col-lg-4">
                            <field name="job_content_ids" nolabel="1">
                                <list create="false" delete="false" class="ko-list-main">
                                    <field name="job_id" string="Job Name" />
                                    <field name="produced_quantity" string="Produced Qty" />
                                </list>
                            </field>
                        </div>
                        <div class="col-lg-4">
                            <group>
                                <field name="attachments" widget="many2many_binary" nolabel="1" class="mt-2" invisible="id == False" />
                            </group>
                        </div>
                        <div class="col-lg-4" invisible="not dxf_drawing">
                            <group string="DXF Drawing" />
                            <div>
                                <field name="dxf_drawing" nolabel="1" widget="image" class="oe_image_full" />
                            </div>
                        </div>
                        <div class="col-lg-4" invisible="not pdf_drawing">
                            <group string="PDF Drawing" />
                            <div>
                                <field name="pdf_drawing" nolabel="1" widget="pdf_viewer" />
                            </div>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Tasks -->
    <record id="action_factory_tasks" model="ir.actions.act_window">
        <field name="name">Tasks</field>
        <field name="res_model">kojto.factory.tasks</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_factory_task_list" />
        <field name="search_view_id" ref="view_factory_task_search" />
        <field name="context">{'form_view_title': 'Factory Task'}</field>
    </record>
</odoo>
