<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_kojto_technical_docs_list" model="ir.ui.view">
            <field name="name">kojto.technical.docs.list.view</field>
            <field name="model">kojto.technical.docs</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_technical_docs_list" string="Technical Document" editable="top">
                    <field name="active" widget="boolean_toggle" decoration-success="active" decoration-danger="not active"/>
                    <field name="subcode_id"/>
                    <field name="name"/>
                    <field name="technical_document_type_id" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_edit': True}"/>
                    <field name="description" optional="show"/>
                    <field name="revision_ids" widget="many2many_tags" optional="show"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_kojto_technical_docs_form" model="ir.ui.view">
            <field name="name">kojto.technical.docs.form.view</field>
            <field name="model">kojto.technical.docs</field>
            <field name="arch" type="xml">
                <form string="Technical Document">
                    <sheet>
                        <group>
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="subcode_id" options="{'no_create': True, 'no_quick_create': True}"/>
                                <field name="name"/>
                                <field name="technical_document_type_id" options="{'no_create': True, 'no_quick_create': True}"/>
                            </group>
                            <group>
                                <field name="description" placeholder="Enter document description..."/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Revisions" name="revisions">
                                <field name="revision_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="technical_document_revision"/>
                                        <field name="description"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_kojto_technical_docs" model="ir.actions.act_window">
            <field name="name">Technical Document </field>
            <field name="res_model">kojto.technical.docs</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
