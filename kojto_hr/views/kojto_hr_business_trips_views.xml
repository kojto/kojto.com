<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_kojto_hr_business_trips_list">
            <field name="name">kojto.hr.business.trips.list</field>
            <field name="model">kojto.hr.business.trips</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_hr_business_trips_list">
                    <field name="name" string="Ref â„–" />
                    <field name="company_name_id" string="Company" />
                    <field name="employee_id" />
                    <field name="destination" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="duration_days" string="Duration (Days)" />
                    <field name="total_budget_expenses_trip_currency" string="Budget"/>
                    <field name="total_actual_expenses_trip_currency" string="Actual"/>
                    <field name="total_payable_to_employee_trip_currency" string="Payable"/>
                    <field name="total_paid_to_employee_trip_currency" string="Paid"/>
                    <field name="balance_trip_currency" string="Balance"/>
                    <button name="copy_business_trip" type="object" class="btn-link" icon="fa-copy" title="Copy Business Trip"/>
                    <button name="print_business_trip_report" type="object" class="btn-link" icon="fa-print" title="Print Report"/>
                </list>
            </field>
        </record>
        <record id="view_kojto_hr_business_trips_form" model="ir.ui.view">
            <field name="name">kojto.hr.business.trips.form</field>
            <field name="model">kojto.hr.business.trips</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_hr_business_trips_form">
                    <sheet class="ko-form-body">
                        <div class="d-flex justify-content-between align-items-center mb-3 ko-form-main-header-line">
                            <div class="w-100 px-0">
                                <div class="row no-gutters">
                                    <div class="col-lg-4 me-0 align-items-center">
                                        <div class="ko-form-view-title">
                                            <span>
                                                BUSINESS TRIP
                                            </span>
                                            <field name="name" class="ko-form-view-title" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4 d-flex justify-content-center">
                                        <field name="language_id" widget="selection_badge" class="ko-offer-wselection-badge" style="margin-bottom: 5px!important"/>
                                        <div class="border-start border-4 mx-2" style="height: 24px;" />
                                        <field name="currency_id" widget="selection_badge" class="ko-offer-wselection-badge" style="margin-bottom: 5px!important"/>
                                    </div>
                                    <div class="col-lg-4 d-flex align-items-center justify-content-end py-2 py-md-0">
                                        <button name="copy_business_trip" class="bg-transparent border-0 d-flex align-items-center me-2" type="object" title="Copy Business Trip">
                                            <i class="fa fa-copy"></i>
                                        </button>
                                        <button name="print_business_trip_report" class="bg-transparent border-0 d-flex align-items-center" type="object" title="Print Report">
                                            <i>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                                    <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1" />
                                                    <path
                                                        d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1" />
                                                </svg>
                                            </i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <separator class="separator-slim-top" />

                        <div class="row">
                            <group class="col-lg-6">
                                <field name="company_id" invisible="1" />
                                <field name="company_name_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                <field name="company_address_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                <field name="company_registration_number" readonly="1" />
                                <field name="code_id" context="{'create': False}" options="{'no_create_edit': True,'no_open':True, 'no_create':True}" required='1' />
                                <field name="business_purpose" />
                            </group>
                            <group class="col-lg-6">
                                <field name="employee_id" context="{'create': False}" options="{'no_create_edit': True,'no_open':True, 'no_create':True}" required='1' />
                                <field name="destination" required='1' />
                                <field name="date_issued" required='1' />
                                <field name="date_start" required='1' />
                                <field name="date_end" required='1' />
                                <field name="duration_days" readonly="1" />
                            </group>
                        </div>
                        <separator class="separator-slim-top" />
                        <!-- Financial Information -->
                        <notebook class="col-lg-12">
                            <page string="Budget Expenses" name="budget_expenses">
                                <field name="content_not_actual_expense" nolabel="1" context="{'default_trip_id': id, 'default_is_actual_expense': False}">
                                    <list editable="bottom">
                                        <field name="name" />
                                        <field name="quantity" />
                                        <field name="unit_id" options="{'no_create_edit': True,'no_open':True, 'no_create':True}" />
                                        <field name="unit_price"/>
                                        <field name="total_sum" readonly="1"/>
                                        <field name="currency_id" context="{'create': False}" options="{'no_create_edit': True,'no_open':True, 'no_create':True}" />
                                        <field name="trip_group" />
                                        <field name="is_actual_expense" widget="boolean_toggle" optional="hide"/>
                                        <button name="copy_business_trip_contents" type="object" class="btn-link" icon="fa-copy" title="Copy Expense" />
                                    </list>
                                </field>
                            </page>
                            <page string="Actual Expenses" name="actual_expenses">
                                <field name="content_is_actual_expense" nolabel="1" context="{'default_trip_id': id, 'default_is_actual_expense': True}">
                                    <list editable="bottom">
                                        <field name="name" />
                                        <field name="quantity" />
                                        <field name="unit_id" options="{'no_create_edit': True,'no_open':True, 'no_create':True}" />
                                        <field name="unit_price"/>
                                        <field name="total_sum" readonly="1"/>
                                        <field name="currency_id" context="{'create': False}" options="{'no_create_edit': True,'no_open':True, 'no_create':True}" />
                                        <field name="trip_group" />
                                        <field name="is_actual_expense"  widget="boolean_toggle" optional="hide"/>
                                        <field name="payable_to_employee" widget="boolean_toggle"/>
                                        <button name="copy_business_trip_contents" type="object" class="btn-link" icon="fa-copy" title="Copy Expense" />
                                    </list>
                                </field>
                            </page>
                            <page string="Payments to Employee" name="payments_to_employee">
                                <field name="payment_ids" nolabel="1" context="{'default_trip_id': id}">
                                    <list editable="bottom">
                                        <field name="payment_datetime" widget="datetime" options="{'show_time': true}"/>
                                        <field name="payment_date" widget="date"/>
                                        <field name="description" />
                                        <field name="currency_id" context="{'create': False}" options="{'no_create_edit': True,'no_open':True, 'no_create':True}" />
                                        <field name="amount"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Logbook" name="logbook">
                                <field name="logbook_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="date" widget="date"/>
                                        <field name="is_working_day" />
                                        <field name="day_of_week" />
                                        <field name="route_description" />
                                        <field name="from_km" />
                                        <field name="to_km" />
                                        <field name="distance_km" readonly="1"/>
                                        <field name="personal_km" />
                                        <field name="comment" />
                                        <button name="copy_logbook_entry" type="object" class="btn-link" icon="fa-copy" title="Copy Logbook Entry" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                        <div class="row">
                            <group class="col-lg-8"/>
                            <group class="col-lg-4">
                                <field name="total_budget_expenses_trip_currency" string="Total Budget Expenses (Trip Currency)" readonly="1"/>
                                <field name="total_actual_expenses_trip_currency" string="Total Actual Expenses (Trip Currency)" readonly="1"/>
                                <field name="total_payable_to_employee_trip_currency" string="Total Payable to Employee (Trip Currency)" readonly="1"/>
                                <field name="total_paid_to_employee_trip_currency" string="Total Paid to Employee (Trip Currency)" readonly="1"/>
                                <field name="balance_trip_currency" string="Balance" readonly="1" help="Positive: employee must be paid, Negative: employee must return money"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="view_kojto_hr_business_trips_search">
            <field name="name">kojto.hr.business.trips.search</field>
            <field name="model">kojto.hr.business.trips</field>
            <field name="arch" type="xml">
                <search string="Business trip">
                    <field name="code_id" />
                    <field name="employee_id" />
                    <field name="destination" />
                    <field name="name" />
                    <field name="date_start" />
                    <field name="date_end" />
                    <field name="company_id" />
                    <filter string="Destination" name="groupby_destination" context="{'group_by': 'destination'}" />
                    <filter string="Project" name="groupby_project" context="{'group_by': 'code_id'}" />
                    <filter string="Employee" name="groupby_employee" context="{'group_by': 'employee_id'}" />
                    <filter string="Company" name="groupby_company" context="{'group_by': 'company_id'}" />
                </search>
            </field>
        </record>
        <record model="ir.actions.act_window" id="action_kojto_hr_business_trips">
            <field name="name">Business trips</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.hr.business.trips</field>
            <field name="context">{}</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_kojto_hr_business_trips_search" />
        </record>
    </data>
</odoo>
