<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_kojto_hr_leave_types_list" model="ir.ui.view">
            <field name="name">kojto.hr.leave.types.list</field>
            <field name="model">kojto.hr.leave.type</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_hr_leave_types_list">
                    <field name="name" />
                    <field name="leave_group" />
                    <field name="based_on" />
                    <field name="copy_order" />
                    <field name="active" />
                </list>
            </field>
        </record>
        <!-- Form View -->
        <record id="view_kojto_hr_leave_types_form" model="ir.ui.view">
            <field name="name">kojto.hr.leave.types.form</field>
            <field name="model">kojto.hr.leave.type</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_hr_leave_types_form">
                    <sheet class="ko-form-body">
                        <!-- Custom Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <!-- Left Section -->
                            <div class="d-flex align-items-center">
                                <div class="ko-form-view-title">
                                    <span>LEAVE TYPES</span>
                                </div>
                            </div>
                        </div>
                        <group>
                            <field name="name" />
                            <field name="leave_group" />
                            <field name="based_on" />
                            <field name="copy_order" />
                            <field name="active" />
                            <field name="color" widget="color"/>
                        </group>
                        <div class="oe_button_box" name="button_box">
                            <button name="create_default_leave_types" type="object" string="Create Default Types" class="oe_stat_button" icon="fa-plus" help="Create default leave types if none exist"/>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Search View -->
        <record model="ir.ui.view" id="view_kojto_hr_leave_types_search">
            <field name="name">kojto.hr.leave.types.search</field>
            <field name="model">kojto.hr.leave.type</field>
            <field name="arch" type="xml">
                <search string="Leave Types">
                    <field name="name" />
                    <field name="leave_group" />
                    <field name="based_on" />
                    <field name="copy_order" />
                    <filter string="Active" name="active" domain="[('active', '=', True)]" />
                    <filter string="Inactive" name="is_inactive" domain="[('active', '=', False)]" />
                </search>
            </field>
        </record>
        <!-- Action Window -->
        <record model="ir.actions.act_window" id="action_kojto_hr_leave_types">
            <field name="name">Leave Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.hr.leave.type</field>
            <field name="context">{}</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_kojto_hr_leave_types_search" />
        </record>
    </data>
</odoo>
