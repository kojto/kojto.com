<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View for Employee Subcode Rates Dashboard -->
        <record model="ir.ui.view" id="view_kojto_hr_employee_subcode_rates_dashboard_list">
            <field name="name">kojto.hr.employee.subcode.rates.dashboard.list</field>
            <field name="model">kojto.hr.employee.subcode.rates.dashboard</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_hr_employee_subcode_rates_dashboard_list" limit="100" sample="1">
                    <field name="employee_name" string="Employee" />
                    <field name="employee_number" string="Employee â„–" />
                    <field name="subcode_name" string="Subcode" />
                    <field name="date_start" string="Valid From" />
                    <field name="hour_rate" string="Hour Rate" />
                    <field name="currency_symbol" string="Currency" />
                </list>
            </field>
        </record>

        <!-- Search View for Employee Subcode Rates Dashboard -->
        <record model="ir.ui.view" id="view_kojto_hr_employee_subcode_rates_dashboard_search">
            <field name="name">kojto.hr.employee.subcode.rates.dashboard.search</field>
            <field name="model">kojto.hr.employee.subcode.rates.dashboard</field>
            <field name="arch" type="xml">
                <search string="Employee Subcode Rates Dashboard">
                    <field name="employee_name" />
                    <field name="employee_number" />
                    <field name="subcode_name" />
                    <field name="currency_symbol" />
                    <filter string="Employee" name="groupby_employee_id" context="{'group_by': 'employee_id'}" />
                    <filter string="Subcode" name="groupby_subcode_id" context="{'group_by': 'subcode_id'}" />
                    <filter string="Currency" name="groupby_currency_id" context="{'group_by': 'currency_id'}" />
                </search>
            </field>
        </record>

        <!-- Action for Employee Subcode Rates Dashboard -->
        <record model="ir.actions.act_window" id="action_kojto_hr_employee_subcode_rates_dashboard">
            <field name="name">Employee Subcode Rates Dashboard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.hr.employee.subcode.rates.dashboard</field>
            <field name="view_mode">list</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'list', 'view_id': ref('view_kojto_hr_employee_subcode_rates_dashboard_list')})]" />
            <field name="search_view_id" ref="view_kojto_hr_employee_subcode_rates_dashboard_search" />
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">No employee subcode rates found</p>
                <p>This dashboard shows active employees with their latest subcode rates.</p>
            </field>
        </record>
    </data>
</odoo>
