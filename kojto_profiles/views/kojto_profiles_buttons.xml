            <field name="model">kojto.landingpage</field>
            <field name="inherit_id" ref="kojto_landingpage.view_kojto_landingpage_form" />
            <field name="arch" type="xml">
                <xpath expr="//comment()[.=' Button group 15 ']" position="after">
                    <!-- Delivery -->
                    <div class="landing_page_item" groups="base.group_erp_manager,kojto_base.kojto_administrator,kojto_base.kojto_manager,kojto_base.kojto_accountant,kojto_base.kojto_assistant">
                        <button name="open_profile_batches_list_view" type="object" class="btn landing_page_button" title="Open Profile Batches" style="color: #b35c00;">
