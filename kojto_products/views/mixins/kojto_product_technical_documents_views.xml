<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Technical Documents List View -->
    <record id="view_kojto_product_technical_document_list" model="ir.ui.view">
        <field name="name">kojto.product.component.technical.document.list</field>
        <field name="model">kojto.product.component</field>
        <field name="arch" type="xml">
            <list string="Technical Documents" class="ko-list-main">
                <field name="active" widget="boolean_toggle"/>
                <field name="name"/>
                <field name="document_number"/>
                <field name="subcode_id"/>
                <field name="document_type"/>
                <field name="document_scale"/>
                <field name="document_format"/>
                <field name="number_of_pages"/>
                <field name="document_author"/>
                <field name="component_type"/>
                <field name="unit_id"/>
                <field name="component_revision_number"/>
                <field name="latest_revision_datetime"/>
            </list>
        </field>
    </record>

    <!-- Technical Documents Form View -->
    <record id="view_kojto_product_technical_document_form" model="ir.ui.view">
        <field name="name">kojto.product.component.technical.document.form</field>
        <field name="model">kojto.product.component</field>
        <field name="arch" type="xml">
            <form string="Technical Document">
                <sheet>
                    <group>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="name"/>
                            <field name="document_number"/>
                            <field name="document_type"/>
                            <field name="document_scale"/>
                            <field name="document_format"/>
                            <field name="number_of_pages"/>
                            <field name="subcode_id"/>
                            <field name="component_type" readonly="1"/>
                        </group>
                        <group>
                            <field name="document_author"/>
                            <field name="unit_id"/>
                            <field name="latest_revision_datetime"/>
                            <field name="description"/>
                        </group>
                    </group>
                    <group>
                        <field name="document_filename" invisible="1"/>
                        <field name="document_file" filename="document_filename"/>
                    </group>
                    <notebook>
                        <page string="Revisions">
                            <field name="revision_ids" class="ko-list-main">
                                <list>
                                    <field name="revision_number"/>
                                    <field name="name"/>
                                    <field name="weight_attribute" string="W (kg)" optional="show"/>
                                    <field name="length_attribute" string="L (m)" optional="hide"/>
                                    <field name="area_attribute" string="A (m²)" optional="hide"/>
                                    <field name="volume_attribute" string="V (m³)" optional="hide"/>
                                    <field name="price_attribute" string="Price (€)" optional="show"/>
                                    <field name="time_attribute" string="Time (min)" optional="hide"/>
                                    <field name="other_attribute" string="Other" optional="hide"/>
                                    <field name="datetime_issue"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Technical Documents Search View -->
    <record id="view_kojto_product_technical_document_search" model="ir.ui.view">
        <field name="name">kojto.product.component.technical.document.search</field>
        <field name="model">kojto.product.component</field>
        <field name="arch" type="xml">
            <search string="Search Technical Documents">
                <field name="name"/>
                <field name="document_number"/>
                <field name="document_author"/>
                <field name="subcode_id"/>
                <field name="document_type"/>
                <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Subcode" name="group_by_subcode" context="{'group_by': 'subcode_id'}"/>
                    <filter string="Component Type" name="group_by_type" context="{'group_by': 'component_type'}"/>
                    <filter string="Document Type" name="group_by_document_type" context="{'group_by': 'document_type'}"/>
                    <filter string="Document Format" name="group_by_format" context="{'group_by': 'document_format'}"/>
                    <filter string="Author" name="group_by_author" context="{'group_by': 'document_author'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Technical Documents Action -->
    <record id="action_kojto_product_technical_document" model="ir.actions.act_window">
        <field name="name">Technical Documents</field>
        <field name="res_model">kojto.product.component</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('component_type', '=', 'technical_document')]</field>
        <field name="context">{'search_default_active': 1, 'default_component_type': 'technical_document'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Technical Document
            </p>
        </field>
    </record>

    <!-- Link the list and form views to the action -->
    <record id="action_kojto_product_technical_document_view_list" model="ir.actions.act_window.view">
        <field name="sequence" eval="1"/>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_kojto_product_technical_document_list"/>
        <field name="act_window_id" ref="action_kojto_product_technical_document"/>
    </record>

    <record id="action_kojto_product_technical_document_view_form" model="ir.actions.act_window.view">
        <field name="sequence" eval="2"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_kojto_product_technical_document_form"/>
        <field name="act_window_id" ref="action_kojto_product_technical_document"/>
    </record>
</odoo>
