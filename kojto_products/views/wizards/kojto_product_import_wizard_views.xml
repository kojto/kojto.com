<?xml version="1.0" encoding="utf-8"?>
<!-- kojto_products/views/wizards/kojto_product_import_wizard_views.xml -->
<odoo>
    <record id="view_kojto_product_import_wizard_form" model="ir.ui.view">
        <field name="name">kojto.product.import.wizard.form</field>
        <field name="model">kojto.product.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Components, Revisions, and Links">
                <group>
                    <field name="import_data" placeholder="TAB separated data: Name, Secondary Name, Unit, Subcode, Component Type (defaults to 'package' if empty), Weight Attribute, Length Attribute, Area Attribute, Volume Attribute, Price Attribute, Time Attribute, Other, Target Subcode, Target Component, Quantity, Link Type, Link Description"/>
                </group>
                <footer>
                    <button name="action_import" type="object" string="Import" class="btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_kojto_product_import_wizard" model="ir.actions.act_window">
        <field name="name">Import Components</field>
        <field name="res_model">kojto.product.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_kojto_product_import_wizard_form"/>
    </record>
</odoo>

