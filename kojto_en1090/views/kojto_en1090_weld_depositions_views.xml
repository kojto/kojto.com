<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_kojto_en1090_weld_depositions_list" model="ir.ui.view">
            <field name="name">kojto.en1090.weld.depositions.list</field>
            <field name="model">kojto.en1090.weld.depositions</field>
            <field name="arch" type="xml">
                <list string="Welding Depositions" class="ko-list-main">
                    <field name="sequence_in_wps"/>
                    <field name="name"/>
                    <field name="deposition_summary"/>
                    <field name="welding_process_id"/>
                    <field name="wps_id"/>
                    <field name="number_of_passes"/>
                </list>
            </field>
        </record>

        <record id="view_kojto_en1090_weld_depositions_form" model="ir.ui.view">
            <field name="name">kojto.en1090.weld.depositions.form</field>
            <field name="model">kojto.en1090.weld.depositions</field>
            <field name="arch" type="xml">
                <form string="Welding Deposition">
                    <sheet>
                        <div class="row">
                            <field name="deposition_summary" readonly="1"/>
                        </div>
                        <div class="row">
                            <group class="col-lg-4">
                                <field name="sequence_in_wps"/>
                                <field name="number_of_passes"/>
                                <field name="name" placeholder="Name"/>
                                <field name="welding_process_id"/>
                                <field name="active" widget="boolean_toggle" invisible="1" force_save="1"/>
                                <field name="wps_id" invisible="1" force_save="1"/>
                            </group>
                            <div class="col-lg-12">
                                <group string="Parameters"/>
                                <field name="parameter_content_ids">
                                    <list class="ko-list-main" editable="bottom" decoration-danger="parameter_is_required">
                                        <field name="parameter_abbreviation"/>
                                        <field name="welding_parameter_id"/>
                                        <field name="parameter_unit"/>
                                        <field name="value" force_save="1"/>
                                        <field name="parameter_is_required" widget="boolean_toggle"/>
                                    </list>
                                </field>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_kojto_en1090_weld_depositions_search" model="ir.ui.view">
            <field name="name">kojto.en1090.weld.depositions.search</field>
            <field name="model">kojto.en1090.weld.depositions</field>
            <field name="arch" type="xml">
                <search string="Search Welding Depositions">
                    <field name="name"/>
                    <field name="deposition_summary"/>
                    <field name="welding_process_id"/>
                    <field name="wps_id"/>
                    <group expand="0" string="Group By">
                        <filter string="Welding Process" name="group_by_process" context="{'group_by': 'welding_process_id'}"/>
                        <filter string="WPS" name="group_by_wps" context="{'group_by': 'wps_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_kojto_en1090_weld_depositions" model="ir.actions.act_window">
            <field name="name">Welding Depositions</field>
            <field name="res_model">kojto.en1090.weld.depositions</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first welding deposition
                </p>
                <p>
                    Create welding depositions to specify welding processes and parameters for your WPS.
                </p>
            </field>
        </record>
    </data>
</odoo>
