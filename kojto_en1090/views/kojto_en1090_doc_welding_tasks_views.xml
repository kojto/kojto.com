<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_kojto_en1090_doc_welding_tasks_list" model="ir.ui.view">
            <field name="name">kojto.en1090.doc.welding.tasks.list</field>
            <field name="model">kojto.en1090.doc.welding.tasks</field>
            <field name="arch" type="xml">
                <list string="Welding Jobs" class="ko-list-main">
                    <field name="active" widget="boolean_toggle"/>
                    <field name="name"/>
                    <field name="date_issue" />
                    <field name="date_planned" />
                    <field name="date_executed" />
                    <field name="welding_processes_summary"/>
                    <field name="materials_summary"/>
                    <field name="plan_issued_by"/>
                    <field name="journal_signed_by"/>
                    <field name="include_document_in_bundle" string="Include in Bundles" widget="boolean_toggle"/>
                    <button name="print_document" type="object" class="btn-link" icon="fa-print" title="Print Welding Task"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_kojto_en1090_doc_welding_tasks_form" model="ir.ui.view">
            <field name="name">kojto.en1090.doc.welding.tasks.form</field>
            <field name="model">kojto.en1090.doc.welding.tasks</field>
            <field name="arch" type="xml">
                <form string="Welding Task">
                    <sheet class="ko-form-body ko-form-main">
                        <div class="d-flex justify-content-between align-items-center ko-form-main-header-line">
                            <div class="w-100 px-0">
                                <div class="row no-gutters">
                                    <div class="col-lg-4 me-0">
                                        <div class="ko-form-view-title" style="padding-top: 1px;">
                                            <field name="name" class="ko-form-view-title" readonly="1" force_save="1"/>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 d-flex justify-content-center">
                                        <field name="language_id" widget="selection_badge" class="ko-offer-wselection-badge" style="margin-bottom: 5px!important"/>
                                    </div>
                                    <div class="col-lg-4 d-flex align-items-center justify-content-end py-2 py-md-0" style="margin-bottom: 5px;">
                                        <button name="print_document" class="bg-transparent border-0 d-flex align-items-center me-2" type="object" title="Print Control Document">
                                            <i>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                                    <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1"/>
                                                    <path d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1"/>
                                                </svg>
                                            </i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <separator class="separator-slim-top"/>

                        <div class="row">
                            <group class="col-lg-4">
                                <field name="include_document_in_bundle" string="Include in Bundles" widget="boolean_toggle"/>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="document_bundle_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="technical_document_revision_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="welding_processes_summary" readonly="1"/>
                                <field name="materials_summary" readonly="1"/>
                            </group>
                            <group class="col-lg-4">
                                <field name="date_planned"/>
                                <field name="plan_issued_by" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="plan_description"/>
                            </group>
                            <group class="col-lg-4">
                                <field name="date_executed"/>
                                <field name="journal_signed_by" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="journal_description"/>
                                <field name="factory_task_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                            </group>
                        </div>
                        <separator/>
                       <div class="row">
                            <div class="col-lg-12" string="Welding Seams">
                                <group string="Welding seams"/>
                                <field name="welding_seam_ids" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}">
                                    <list class="ko-list-main">
                                        <field name="consequtive_number" />
                                        <field name="welding_task_id" />
                                        <field name="name" />
                                        <field name="applicable_wps_id" />
                                        <field name="seam_length" />
                                        <field name="seam_thickness" />
                                        <field name="description" />
                                        <field name="welder_id" />
                                    </list>
                                </field>
                            </div>
                            <div class="col-lg-12" string="Equipment">
                                <group string="Equipment"/>
                                <field name="equipment_ids" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}">
                                    <list class="ko-list-main">
                                        <field name="name" />
                                        <field name="equipment_type" />
                                        <field name="model" />
                                        <field name="serial_number" />
                                        <field name="calibration_date" />
                                    </list>
                                </field>
                            </div>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_kojto_en1090_doc_welding_tasks_search" model="ir.ui.view">
            <field name="name">kojto.en1090.doc.welding.tasks.search</field>
            <field name="model">kojto.en1090.doc.welding.tasks</field>
            <field name="arch" type="xml">
                <search string="Search Welding Jobs">
                    <field name="name"/>
                    <field name="document_bundle_id"/>
                    <field name="welding_processes_summary"/>
                    <field name="materials_summary"/>
                    <field name="plan_issued_by"/>
                    <field name="journal_signed_by"/>
                    <separator/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Planned" name="planned" domain="[('date_planned', '!=', False), ('date_executed', '=', False)]"/>
                    <filter string="Executed" name="executed" domain="[('date_executed', '!=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Document Bundle" name="group_by_document_bundle" context="{'group_by': 'document_bundle_id'}"/>
                        <filter string="Plan Issued By" name="group_by_plan_issued_by" context="{'group_by': 'plan_issued_by'}"/>
                        <filter string="Journal Signed By" name="group_by_journal_signed_by" context="{'group_by': 'journal_signed_by'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_kojto_en1090_doc_welding_tasks" model="ir.actions.act_window">
            <field name="name">Welding Tasks</field>
            <field name="res_model">kojto.en1090.doc.welding.tasks</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first welding task!
                </p>
                <p>
                    Welding tasks are used to plan and track welding operations.
                </p>
            </field>
        </record>

    </data>
</odoo>
