<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_kojto_en1090_wpqr_list" model="ir.ui.view">
            <field name="name">kojto.en1090.wpqrs.list</field>
            <field name="model">kojto.en1090.wpqrs</field>
            <field name="arch" type="xml">
                <list string="WPQRs" class="ko-list-main">
                    <field name="active" widget="boolean_toggle" string=" "/>
                    <field name="language_id" string=" "/>
                    <field name="name_summary" string="Name"/>
                    <field name="date_issued" />
                    <field name="date_change" />
                    <field name="preliminary_wps_id"/>
                    <field name="iso_15614_acceptance_level"/>
                    <field name="range_of_approval"/>
                    <field name="materials_summary"/>
                    <field name="welding_joint_geometry_id"/>
                    <field name="description"/>
                    <field name="company_id"/>
                    <field name="certification_body_id"/>
                    <field name="include_document_in_bundle" string="Include in Bundles" widget="boolean_toggle"/>
                    <field name="degree_of_mechanisation"/>
                    <button name="copy_wpqr" type="object" class="b-0 text-black bg-transparent fa fa-copy" title="Copy WPQR"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_kojto_en1090_wpqr_form" model="ir.ui.view">
            <field name="name">kojto.en1090.wpqrs.form</field>
            <field name="model">kojto.en1090.wpqrs</field>
            <field name="arch" type="xml">
                <form string="Welding Procedure Qualification Record">
                    <sheet class="ko-form-body ko-form-main">
                        <div class="d-flex justify-content-between align-items-center ko-form-main-header-line">
                            <div class="w-100 px-0">
                                <div class="row no-gutters">
                                    <div class="col-lg-4 me-0">
                                        <div class="ko-form-view-title" style="padding-top: 1px;">
                                            <field name="name" class="ko-form-view-title" readonly="1" force_save="1"/>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 d-flex justify-content-center">
                                        <field name="language_id" widget="selection_badge" class="ko-offer-wselection-badge" style="margin-bottom: 5px!important"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <separator class="separator-slim-top"/>
                        <div class="row">
                            <group class="col-lg-4">
                                <field name="include_document_in_bundle" string="Include in Bundles" widget="boolean_toggle"/>
                                <field name="degree_of_mechanisation"/>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="name_secondary"/>
                                <field name="name_summary"/>
                                <field name="date_issued" />
                                <field name="date_change" />
                                <field name="preliminary_wps_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="iso_15614_acceptance_level"/>
                                <field name="range_of_approval"/>
                                <field name="description"/>
                            </group>

                            <group class="col-lg-4">
                                <field name="company_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="company_name_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="company_address_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <separator/>
                                <field name="certification_body_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="certification_body_name_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="certification_body_address_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                            </group>

                            <group class="col-lg-4">
                                <field name="attachment_id" widget="many2many_binary" nolabel="1" class="mt-2" invisible="id == False" />
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_kojto_en1090_wpqr_search" model="ir.ui.view">
            <field name="name">kojto.en1090.wpqrs.search</field>
            <field name="model">kojto.en1090.wpqrs</field>
            <field name="arch" type="xml">
                <search string="Search WPQRs">
                    <field name="name"/>
                    <field name="name_secondary"/>
                    <field name="preliminary_wps_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_kojto_en1090_wpqr" model="ir.actions.act_window">
            <field name="name">WPQR</field>
            <field name="res_model">kojto.en1090.wpqrs</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_kojto_en1090_wpqr_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first WPQR!
                </p>
                <p>
                    Define Welding Procedure Qualification Records (WPQR) for your welding operations.
                </p>
            </field>
        </record>
    </data>
</odoo>
