<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_kojto_en1090_weld_geometries_list" model="ir.ui.view">
            <field name="name">kojto.en1090.weld.geometries.list</field>
            <field name="model">kojto.en1090.weld.geometries</field>
            <field name="arch" type="xml">
                <list string="Weld Geometries" class="ko-list-main">
                    <field name="active" widget="boolean_toggle"/>
                    <field name="weld_drawing_svg" widget="image"/>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="translation_ids" widget="many2many_tags"/>
                    <field name="weld_type"/>
                    <field name="standard"/>
                    <field name="iso_2553_symbol"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_kojto_en1090_weld_geometries_form" model="ir.ui.view">
            <field name="name">kojto.en1090.weld.geometries.form</field>
            <field name="model">kojto.en1090.weld.geometries</field>
            <field name="arch" type="xml">
                <form string="Weld Geometries">
                    <sheet>
                        <group>
                            <group>
                                <field name="name" placeholder="Geometry Name"/>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="code"/>
                                <field name="weld_type"/>
                                <field name="standard"/>
                                <field name="iso_2553_symbol"/>
                                <field name="weld_drawing_svg" filename="weld_drawing_filename" widget="image" class="o_image_small" style="max-width: 100px; max-height: 100px;"/>
                                <field name="weld_drawing_filename" invisible="1"/>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="translation_ids" context="{'default_reference_model': 'kojto.en1090.weld.geometries', 'default_reference_id': id, 'default_geometry_id': id}">
                                    <list name="translation_list" string="Translations" editable="bottom" class="ko-list-main">
                                        <field name="language_id" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                                        <field name="translated_name"/>
                                    </list>
                                </field>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_kojto_en1090_weld_geometries_search" model="ir.ui.view">
            <field name="name">kojto.en1090.weld.geometries.search</field>
            <field name="model">kojto.en1090.weld.geometries</field>
            <field name="arch" type="xml">
                <search string="Search Weld Geometries">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="weld_type"/>
                    <field name="standard"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Weld Type" name="groupby_type" context="{'group_by': 'weld_type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_kojto_en1090_weld_geometries" model="ir.actions.act_window">
            <field name="name">Weld Geometries</field>
            <field name="res_model">kojto.en1090.weld.geometries</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_kojto_en1090_weld_geometries_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first weld geometry!
                </p>
                <p>
                    Define weld geometries with their corresponding SVG images.
                </p>
            </field>
        </record>
    </data>
</odoo>
