<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- list View -->
        <record id="view_kojto_en1090_translations_list" model="ir.ui.view">
            <field name="name">kojto.en1090.translations.list</field>
            <field name="model">kojto.en1090.translations</field>
            <field name="arch" type="xml">
                <list string="Translations" class="ko-main-list" editable="top">
                    <field name="active" widget="boolean_toggle"/>
                    <field name="name"/>
                    <field name="specialist_id"/>
                    <field name="geometry_id"/>
                    <field name="process_id"/>
                    <field name="parameter_id"/>
                    <field name="language_id"/>
                    <field name="translated_name"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_kojto_en1090_translations_form" model="ir.ui.view">
            <field name="name">kojto.en1090.translations.form</field>
            <field name="model">kojto.en1090.translations</field>
            <field name="arch" type="xml">
                <form string="Translation">
                    <sheet>
                        <group>
                            <field name="active" widget="boolean_toggle"/>
                            <field name="name"/>
                            <field name="language_id" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <field name="specialist_id" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <field name="geometry_id" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <field name="process_id" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <field name="parameter_id" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                            <field name="translated_name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_kojto_en1090_translations_search" model="ir.ui.view">
            <field name="name">kojto.en1090.translations.search</field>
            <field name="model">kojto.en1090.translations</field>
            <field name="arch" type="xml">
                <search string="Search Translations">
                    <field name="name"/>
                    <field name="translated_name"/>
                    <field name="language_id"/>
                    <field name="specialist_id"/>
                    <field name="geometry_id"/>
                    <field name="process_id"/>
                    <field name="parameter_id"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                    <filter string="Specialist Translations" name="specialist" domain="[('specialist_id', '!=', False)]"/>
                    <filter string="Geometry Translations" name="geometry" domain="[('geometry_id', '!=', False)]"/>
                    <filter string="Process Translations" name="process" domain="[('process_id', '!=', False)]"/>
                    <filter string="Parameter Translations" name="parameter" domain="[('parameter_id', '!=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Language" name="group_language" context="{'group_by': 'language_id'}"/>
                        <filter string="Specialist" name="group_specialist" context="{'group_by': 'specialist_id'}"/>
                        <filter string="Geometry" name="group_geometry" context="{'group_by': 'geometry_id'}"/>
                        <filter string="Process" name="group_process" context="{'group_by': 'process_id'}"/>
                        <filter string="Parameter" name="group_parameter" context="{'group_by': 'parameter_id'}"/>
                        <filter string="Active" name="group_active" context="{'group_by': 'active'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_kojto_en1090_translations" model="ir.actions.act_window">
            <field name="name">Translations</field>
            <field name="res_model">kojto.en1090.translations</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first translation!
                </p>
                <p>
                    This module allows you to manage translations for welding parameters,
                    weld geometries, welding processes, and welding specialists.
                </p>
            </field>
        </record>
    </data>
</odoo>
