<?xml version="1.0" encoding="UTF-8" ?>
<!-- kojto_base/data/chron_job.xml -->
<odoo>
    <data noupdate="1">
        <!-- Cron job for 00:00 UTC -->
        <record id="ir_cron_import_ecb_rates_00" model="ir.cron">
            <field name="name">Import ECB Daily Rates - 00:00 UTC</field>
            <field name="model_id" ref="model_kojto_base_currency_exchange"/>
            <field name="state">code</field>
            <field name="code">model.import_ecb_daily_rates()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=0, minute=0, second=0, microsecond=0) + timedelta(days=1 if DateTime.now().hour >= 0 else 0)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="priority">1</field>
            <field name="active" eval="True"/>
        </record>

        <!-- Cron job for 12:00 UTC -->
        <record id="ir_cron_import_ecb_rates_12" model="ir.cron">
            <field name="name">Import ECB Daily Rates - 12:00 UTC</field>
            <field name="model_id" ref="model_kojto_base_currency_exchange"/>
            <field name="state">code</field>
            <field name="code">model.import_ecb_daily_rates()</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="nextcall" eval="(DateTime.now().replace(hour=12, minute=0, second=0, microsecond=0) + timedelta(days=1 if DateTime.now().hour >= 12 else 0)).strftime('%Y-%m-%d %H:%M:%S')"/>
            <field name="priority">1</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
