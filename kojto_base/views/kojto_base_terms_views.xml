<odoo>
    <data>
        <!-- Views for Kojto Base Payment Terms -->
        <!-- List View -->
        <record model="ir.ui.view" id="view_kojto_base_payment_terms_list">
            <field name="name">kojto.base.payment.terms.list</field>
            <field name="model">kojto.base.payment.terms</field>
            <field name="arch" type="xml">
                <list class="ko-list-main">
                    <field name="name" />
                    <field name="abbreviation" />
                </list>
            </field>
        </record>
        <!-- Search View -->
        <record model="ir.ui.view" id="view_kojto_base_payment_terms_search">
            <field name="name">kojto.base.payment.terms.search</field>
            <field name="model">kojto.base.payment.terms</field>
            <field name="arch" type="xml">
                <search string="Payment Terms">
                    <field name="name" />
                    <separator />
                    <field name="abbreviation" />
                </search>
            </field>
        </record>
        <!-- Action -->
        <record model="ir.actions.act_window" id="action_kojto_base_payment_terms">
            <field name="name">Kojto Base Payment Terms</field>
            <field name="res_model">kojto.base.payment.terms</field>
            <field name="view_mode">list</field>
        </record>
        <!-- Views for Kojto Base VAT Treatment -->
        <!-- List View -->
        <record model="ir.ui.view" id="view_kojto_finance_vat_treatment_list">
            <field name="name">kojto.finance.vat.treatment.list</field>
            <field name="model">kojto.finance.vat.treatment</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_finance_vat_treatment_list">
                    <field name="name" />
                    <field name="code" />
                    <field name="vat_in_out_type" />
                </list>
            </field>
        </record>
        <!-- Search View -->
        <record model="ir.ui.view" id="view_kojto_finance_vat_treatment_search">
            <field name="name">kojto.finance.vat.treatment.search</field>
            <field name="model">kojto.finance.vat.treatment</field>
            <field name="arch" type="xml">
                <search string="VAT Treatments">
                    <field name="name" />
                    <separator />
                    <field name="code" />
                    <separator />
                    <field name="vat_in_out_type" />
                    <separator />
                    <filter string="Type" name="groupby_vat_in_out_type" context="{'group_by': 'vat_in_out_type'}" />
                </search>
            </field>
        </record>
        <!-- Action -->
        <record model="ir.actions.act_window" id="action_kojto_finance_vat_treatment">
            <field name="name">Kojto Finance Vat Treatment</field>
            <field name="res_model">kojto.finance.vat.treatment</field>
            <field name="view_mode">list</field>
        </record>
        <!-- Views for Kojto Base Incoterms -->
        <!-- List View -->
        <record model="ir.ui.view" id="view_kojto_base_incoterms_list">
            <field name="name">kojto.base.incoterms.list</field>
            <field name="model">kojto.base.incoterms</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_base_incoterms_list">
                    <field name="name" optional="show" />
                    <field name="description" />
                    <field name="abbreviation" optional="show" />
                    <field name="transportation_mode" optional="show" />
                    <field name="active" optional="show" />
                </list>
            </field>
        </record>
        <!-- Search View -->
        <record model="ir.ui.view" id="view_kojto_base_incoterms_search">
            <field name="name">kojto.base.incoterms.search</field>
            <field name="model">kojto.base.incoterms</field>
            <field name="arch" type="xml">
                <search string="Incoterms">
                    <field name="name" />
                    <separator />
                    <field name="abbreviation" />
                    <separator />
                    <filter name="active" string="Active" domain="[('active', '=', True)]" />
                    <filter name="active_inactive" string="Inactive" domain="[('active', '=', False)]" />
                </search>
            </field>
        </record>
        <!-- Action -->
        <record model="ir.actions.act_window" id="action_kojto_base_incoterms">
            <field name="name">Kojto Base Incoterms</field>
            <field name="res_model">kojto.base.incoterms</field>
            <field name="view_mode">list</field>
        </record>
    </data>
</odoo>
