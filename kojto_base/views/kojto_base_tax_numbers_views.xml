<odoo>
    <data>
        <!-- List View for Kojto Base Tax Numbers -->
        <record model="ir.ui.view" id="view_kojto_base_tax_numbers_list">
            <field name="name">kojto.base.tax.numbers.list</field>
            <field name="model">kojto.base.tax.numbers</field>
            <field name="arch" type="xml">
                <list class="ko-list-main" limit="100" editable="top">
                    <field name="name" />
                    <field name="tax_number" />
                    <field name="description" />
                    <field name="active" widget="boolean_toggle" />
                </list>
            </field>
        </record>
        <!-- Form View for Kojto Base Tax Numbers -->
        <record model="ir.ui.view" id="view_kojto_base_tax_numbers_form">
            <field name="name">kojto.base.tax.numbers.form</field>
            <field name="model">kojto.base.tax.numbers</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_base_tax_numbers_form">


                    <sheet class="ko-form-body">
                        <!-- Custom Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <!-- Left Section -->
                            <div class="d-flex align-items-center">
                                <div class="ko-form-view-title">
                                    <span>TAX NUMBER</span>
                                </div>
                            </div>
                        </div>
                        <!-- Custom Header End -->
                        <group class="col-lg-6">
                            <field name="tax_number" />
                            <field name="description" />
                            <field name="active" widget="boolean_toggle" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Search View for Kojto Base Tax Numbers -->
        <record model="ir.ui.view" id="view_kojto_base_tax_numbers_search">
            <field name="name">kojto.base.tax.numbers.search</field>
            <field name="model">kojto.base.tax.numbers</field>
            <field name="arch" type="xml">
                <search>
                    <field name="tax_number" />
                    <separator />
                    <filter name="active" string="Active" domain="[('active', '=', True)]" />
                    <filter name="active_inactive" string="Inactive" domain="[('active', '=', False)]" />
                </search>
            </field>
        </record>
        <!-- Action to Open List and Form Views for Kojto Base Tax Numbers -->
        <record model="ir.actions.act_window" id="action_kojto_base_tax_numbers">
            <field name="name">Tax Numbers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.base.tax.numbers</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p>Manage your tax number records here.</p>
            </field>
        </record>
    </data>
</odoo>
