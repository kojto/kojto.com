<odoo>
    <data>
        <!-- List View for Kojto Bank Accounts -->
        <record model="ir.ui.view" id="view_kojto_base_bank_accounts_list">
            <field name="name">kojto.base.bank.accounts.list</field>
            <field name="model">kojto.base.bank.accounts</field>
            <field name="arch" type="xml">
                <list class="ko-list-main" limit="100" editable="top">
                    <field name="active" widget="boolean_toggle" />
                    <field name="name" />
                    <field name="account_type" />
                    <field name="bank_id" />
                    <field name="IBAN" />
                    <field name="BIC" />
                    <field name="currency_id" />
                </list>
            </field>
        </record>
        <!-- Form View for Kojto Bank Accounts -->
        <record model="ir.ui.view" id="view_kojto_base_bank_accounts_form">
            <field name="name">kojto.base.bank.accounts.form</field>
            <field name="model">kojto.base.bank.accounts</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_base_bank_accounts_form">
                    <sheet class="ko-form-body">
                        <!-- Custom Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <!-- Left Section -->
                            <div class="d-flex align-items-center">
                                <div class="ko-form-view-title">
                                    <span>BANK ACCOUNT</span>
                                </div>
                            </div>
                        </div>
                        <!-- Custom Header End -->
                        <group>
                            <field name="name" />
                            <field name="bank_id" />
                            <field name="BIC" />
                            <field name="IBAN" />
                            <field name="account_type" />
                            <field name="currency_id" />
                            <field name="active" widget="boolean_toggle" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View for Kojto Bank Accounts -->
        <record model="ir.ui.view" id="view_kojto_base_bank_accounts_search">
            <field name="name">kojto.base.bank.accounts.search</field>
            <field name="model">kojto.base.bank.accounts</field>
            <field name="arch" type="xml">
                <search>
                    <field name="account_type" />
                    <field name="active" />
                    <field name="IBAN" />
                    <field name="bank_id" />
                    <separator />
                    <filter name="active" string="Active" domain="[('active', '=', True)]" />
                    <filter name="active_inactive" string="Inactive" domain="[('active', '=', False)]" />
                    <filter string="Bank" name="groupby_bank" context="{'group_by': 'bank_id'}" />
                    <filter string="Account type" name="groupby_account_type" context="{'group_by': 'account_type'}" />
                </search>
            </field>
        </record>

        <!-- Action to Open List and Form Views for Kojto Bank Accounts -->
        <record model="ir.actions.act_window" id="action_kojto_base_bank_accounts">
            <field name="name">Bank Accounts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.base.bank.accounts</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p>Create and manage your bank account records here.</p>
            </field>
        </record>
    </data>
</odoo>
