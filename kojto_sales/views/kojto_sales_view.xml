<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="view_kojto_sale_leads_list">
            <field name="name">kojto.sale.leads.list</field>
            <field name="model">kojto.sale.leads</field>
            <field name="arch" type="xml">
                <list class="ko-list-main" limit="100" sample="1">
                    <field name="active" string=" " optional="show" widget="boolean_toggle" class="w-100 d-flex justify-content-center" />
                    <field name="name" optional="show" string="Sale Lead №" />
                    <field name="subject" optional="show" />
                    <field name="status" optional="show" string="Status" />
                    <field name="project_name" optional="show" string="Project Name" />
                    <field name="date_start" optional="show" string="Start Date" />
                    <field name="date_execution" optional="show" string="Execution Date" />
                    <field name="expected_project_quantity" optional="show" string="Quantity" />
                    <field name="project_unit_id" optional="show" string="Unit" />
                    <field name="expected_project_value" optional="show" string="Value" widget="monetary" options="{'currency_field': 'project_currency_id'}" />
                    <field name="project_currency_id" optional="hide"/>
                    <field name="last_sales_interaction_datetime" optional="show" widget="datetime" options="{'show_time': false}"/>
                    <field name="next_sales_interaction_datetime" optional="show" widget="datetime" options="{'show_time': false}"/>
                    <field name="repr_html_counterparties" optional="show" string="Counterparties" class="text-truncate" />
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="view_kojto_sale_leads_form">
            <field name="name">kojto.sale.leads.form</field>
            <field name="model">kojto.sale.leads</field>
            <field name="arch" type="xml">
                <form class="ko-form-main">
                    <sheet class="ko-form-body">
                        <div class="d-flex justify-content-between align-items-center mb-3 ko-form-main-header-line">
                            <div class="w-100 px-0">
                                <div class="row no-gutters">
                                    <div class="col-lg-4 me-0">
                                        <div class="ko-form-view-title">Sale Lead # <field name="name" class="ko-form-view-title" />
                                        </div>
                                    </div>
                                    <div class="col-lg-4 d-flex align-items-center py-2 py-md-0">
                                        <div class="d-flex align-items-center">

                                        </div>
                                    </div>
                                    <div class="col-lg-4 d-flex align-items-end py-2 py-md-0">
                                        <div class="d-flex align-items-center">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <separator class="separator-slim-top" />
                        <div class="row">
                            <group class="col-lg-4">
                                <field name="active" widget="boolean_toggle" />
                                <field name="subject" />
                                <field name="status" />
                                <field name="date_start" />
                                <field name="date_execution" />
                                <field name="next_sales_interaction_datetime" readonly="1" />
                            </group>

                            <group class="col-lg-4">
                                <field name="project_name" string="Project name" />
                                <field name="project_address" string="Address" />
                                <field name="project_city" string="City" />
                                <field name="project_country_id" string="Country" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="description" placeholder="Enter description here..." />
                            </group>

                            <group class="col-lg-4">
                                <field name="expected_project_quantity" string="Expected Quantity" />
                                <field name="project_unit_id" string="Unit" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                <field name="expected_project_value" string="Expected Value" />
                                <field name="project_currency_id" string="Currency" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                            </group>
                        </div>

                        <notebook>

                            <page string="Contents" name="contents">
                                <div class="col-lg-12">
                                    <field name="content_ids" nolabel="1">
                                        <list editable="bottom" default_order="position">
                                            <field name="position" string = "№" />
                                            <field name="description" />
                                            <field name="date_start" string="Date" />
                                            <field name="type" widget="selection" />
                                        </list>
                                    </field>
                                </div>
                            </page>

                            <page string="Counterparties" name="counterparties">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <field name="counterparty_ids" nolabel="1">
                                            <list editable="bottom" default_order="print_number desc">
                                                <field name="counterparty_id"/>
                                                <field name="role" widget="selection" />
                                                <field name="counterparty_lead_comment"/>
                                                <field name="address_id" domain="[('contact_id', '=', counterparty_id)]" />
                                                <field name="email_id" domain="[('contact_id', '=', counterparty_id)]" />
                                                <field name="phone_id" domain="[('contact_id', '=', counterparty_id)]" />
                                            </list>
                                        </field>
                                    </div>
                                </div>
                            </page>


                            <page string="Offers" name="offers">
                                <field name="offer_ids" nolabel="1">
                                    <list>
                                        <field name="active" widget="boolean_toggle" />
                                        <field name="name" />
                                        <field name="subject" />
                                        <field name="date_issue" string="Issue Date" />
                                        <field name="date_end" string="Valid To" />
                                        <field name="total_price" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                        <field name="currency_id" optional="hide"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Actions" name="actions">
                                <field name="action_ids" nolabel="1">
                                    <list editable="bottom">
                                        <field name="date" string="When" />
                                        <field name="contact_person" string="Who" />
                                        <field name="channel" string="Channel" />
                                        <field name="description" string="What was discussed" />
                                    </list>
                                </field>
                            </page>
                            <page string="Attachments" name="attachments">
                                <field name="attachment_ids" nolabel="1" widget="many2many_binary" invisible="id == False" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Search View -->
        <record model="ir.ui.view" id="view_kojto_sale_leads_search">
            <field name="name">kojto.sale.leads.search</field>
            <field name="model">kojto.sale.leads</field>
            <field name="arch" type="xml">
                <search string="Sale Lead Documents">
                    <field name="name" />
                    <field name="subject" />
                    <field name="status" />
                    <field name="project_name" />
                    <field name="date_start" />
                    <field name="date_execution" />
                    <field name="active" />
                    <filter name="active_sales" string="Active Sale Leads" domain="[('active', '=', True)]" />
                    <filter name="inactive_sales" string="Inactive Sale Leads" domain="[('active', '=', False)]" />
                    <separator />
                    <filter name="status_new" string="New" domain="[('status', '=', 'new')]" />
                    <filter name="status_in_progress" string="In Progress" domain="[('status', '=', 'in_progress')]" />
                    <filter name="status_qualified" string="Qualified" domain="[('status', '=', 'qualified')]" />
                    <filter name="status_proposal_sent" string="Proposal Sent" domain="[('status', '=', 'proposal_sent')]" />
                    <filter name="status_negotiation" string="Negotiation" domain="[('status', '=', 'negotiation')]" />
                    <filter name="status_won" string="Won" domain="[('status', '=', 'won')]" />
                    <filter name="status_lost" string="Lost" domain="[('status', '=', 'lost')]" />
                    <filter name="status_cancelled" string="Cancelled" domain="[('status', '=', 'cancelled')]" />
                </search>
            </field>
        </record>
        <!-- Action -->
        <record model="ir.actions.act_window" id="action_kojto_sale_leads">
            <field name="name">Sale Leads</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.sale.leads</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Add Sale Lead Documents</p>
            </field>
            <!-- Explicitly define view_ids as sub-records -->
            <field name="view_ids" eval="[(5, 0, 0)]" />
        </record>
        <!-- Clear existing views -->
        <record model="ir.actions.act_window.view" id="action_kojto_sale_leads_list">
            <field name="act_window_id" ref="action_kojto_sale_leads" />
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_kojto_sale_leads_list" />
            <field name="sequence" eval="10" />
        </record>
        <record model="ir.actions.act_window.view" id="action_kojto_sale_leads_form">
            <field name="act_window_id" ref="action_kojto_sale_leads" />
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_kojto_sale_leads_form" />
            <field name="sequence" eval="20" />
        </record>
    </data>
</odoo>
