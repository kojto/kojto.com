<odoo>
    <data>
        <!-- List Views -->
        <record model="ir.ui.view" id="view_kojto_finance_accounting_identifiers_list">
            <field name="name">kojto.finance.accounting.identifiers.list</field>
            <field name="model">kojto.finance.accounting.identifiers</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_finance_accounting_identifiers_list" editable="top">
                    <field name="active" widget="boolean_toggle" />
                    <field name="identifier"/>
                    <field name="name" optional="show"/>
                    <field name="unit_id"/>
                    <field name="identifier_type"/>
                </list>
            </field>
        </record>


        <!-- Search Views -->
        <record model="ir.ui.view" id="view_kojto_finance_accounting_identifiers_search">
            <field name="name">kojto.finance.accounting.identifiers.search</field>
            <field name="model">kojto.finance.accounting.identifiers</field>
            <field name="arch" type="xml">
                <search string="accounting">
                    <field name="name" />
                    <field name="identifier" />
                    <field name="identifier_type" />
                    <field name="active"/>
                </search>
            </field>
        </record>
        <!-- Actions to Return Model Views -->
        <record model="ir.actions.act_window" id="action_kojto_finance_accounting_identifiers">
            <field name="name">Accounting identifiers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.finance.accounting.identifiers</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create</p>
            </field>
        </record>
    </data>
</odoo>
