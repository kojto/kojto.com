<odoo>
    <data>
        <!-- Wizard Form View for kojto.finance.invoice.content.import.wizard -->
        <record id="view_kojto_finance_invoice_content_import_wizard_form" model="ir.ui.view">
            <field name="name">kojto.finance.invoice.content.import.wizard.form</field>
            <field name="model">kojto.finance.invoice.content.import.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Invoice Content">
                    <style>.modal-dialog {max-width: 1000px !important; min-width: 1000px !important;}</style>
                    <group>
                        <field name="invoice_id" readonly="1" string="Invoice"/>
                        <field name="data" widget="text" placeholder="Paste data here (Position;Name;Quantity;Unit;Unit Price;VAT Rate;Subcode)" string="Content Data"/>
                    </group>
                    <footer>
                        <button name="action_import" string="Import" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action for the wizard -->
        <record id="action_kojto_finance_invoice_content_import_wizard" model="ir.actions.act_window">
            <field name="name">Import Invoice Content</field>
            <field name="res_model">kojto.finance.invoice.content.import.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_kojto_finance_invoice_content_import_wizard_form"/>
            <field name="context">{'default_invoice_id': active_id, 'form_view_initial_mode': 'edit'}</field>
        </record>
    </data>
</odoo>
