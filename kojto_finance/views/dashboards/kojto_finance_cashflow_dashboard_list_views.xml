<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_kojto_finance_cashflow_dashboard_list" model="ir.ui.view">
            <field name="name">kojto.finance.cashflow.dashboard.list</field>
            <field name="model">kojto.finance.cashflow.dashboard</field>
            <field name="arch" type="xml">
                <list string="Finance Cash Flow Dashboard" class="ko-list-main">
                    <field name="year"/>
                    <field name="quarter"/>
                    <field name="month"/>
                    <field name="incoming_cash_flow" sum="Total"/>
                    <button name="action_incoming_allocations" type="object" string=" " icon="fa-external-link"/>
                    <field name="outgoing_cash_flow" sum="Total"/>
                    <button name="action_outgoing_allocations" type="object" string=" " icon="fa-external-link"/>
                    <field name="balance" sum="Total"/>
                </list>
            </field>
        </record>

        <record id="action_kojto_finance_cashflow_dashboard" model="ir.actions.act_window">
            <field name="name">Cash Flow Dashboard</field>
            <field name="res_model">kojto.finance.cashflow.dashboard</field>
            <field name="view_mode">list</field>
            <field name="view_id" ref="view_kojto_finance_cashflow_dashboard_list"/>
        </record>
    </data>
</odoo>
