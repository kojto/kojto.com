<odoo>
    <data>
        <!-- List Views -->
        <record model="ir.ui.view" id="view_kojto_finance_accounting_types_list">
            <field name="name">kojto.finance.accounting.types.list</field>
            <field name="model">kojto.finance.accounting.types</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_finance_accounting_types_list" editable="top">
                    <field name="name" optional="show" />
                    <field name="primary_type" />
                    <field name="secondary_type" />
                    <field name="accounting_warehouse" />
                    <field name="accounting_warehouse_name" />
                </list>
            </field>
        </record>

        <!-- Form Views -->
        <record model="ir.ui.view" id="view_kojto_finance_accounting_types_form">
            <field name="name">kojto.finance.accounting.types.form</field>
            <field name="model">kojto.finance.accounting.types</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_finance_accounting_types_form">
                    <sheet class="ko-form-body">
                        <!-- Custom Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <!-- Left Section -->
                            <div class="d-flex align-items-center">
                                <div class="ko-form-view-title">
                                    <span>ACCOUNTING TYPES ENTRY</span>
                                </div>
                            </div>
                        </div>
                        <group>
                            <field name="name" />
                            <field name="accounting_warehouse" />
                            <field name="accounting_warehouse_name" />
                            <field name="primary_type" />
                            <field name="secondary_type" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search Views -->
        <record model="ir.ui.view" id="view_kojto_finance_accounting_types_search">
            <field name="name">kojto.finance.accounting.types.search</field>
            <field name="model">kojto.finance.accounting.types</field>
            <field name="arch" type="xml">
                <search string="accounting types">
                    <field name="name" />
                    <field name="accounting_warehouse" />
                    <field name="primary_type" />
                    <field name="secondary_type" />
                </search>
            </field>
        </record>

        <!-- Actions to Return Model Views -->
        <record model="ir.actions.act_window" id="action_kojto_finance_accounting_types">
            <field name="name">Accounting Types</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.finance.accounting.types</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create</p>
            </field>
        </record>
    </data>
</odoo>
