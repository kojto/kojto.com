<odoo>
    <data>
        <record model="ir.ui.view" id="view_kojto_finance_invoice_contents_list">
            <field name="name">kojto.finance.invoice.contents.list</field>
            <field name="model">kojto.finance.invoice.contents</field>
            <field name="arch" type="xml">
                <list string="Invoice Contents" default_order="id desc" class="ko-list-main">
                    <field name="invoice_id"/>
                    <field name="subcode_id"/>
                    <field name="name"/>
                    <field name="quantity"/>
                    <field name="unit_id"/>
                    <field name="unit_price"/>
                    <field name="pre_vat_total"/>
                    <field name="vat_rate"/>
                    <field name="vat_total"/>
                    <field name="total_price"/>
                    <field name="currency_id"/>
                    <field name="value_in_bgn"/>
                    <field name="value_in_eur"/>
                </list>
            </field>
        </record>

        <!-- Action -->
        <record id="action_kojto_finance_invoice_contents" model="ir.actions.act_window">
            <field name="name">Invoice Contents</field>
            <field name="res_model">kojto.finance.invoice.contents</field>
            <field name="view_mode">list</field>
        </record>
    </data>
</odoo>
