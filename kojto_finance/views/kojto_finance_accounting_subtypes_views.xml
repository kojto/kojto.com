<odoo>
    <data>
        <!-- List Views -->
        <record model="ir.ui.view" id="view_kojto_finance_accounting_subtypes_list">
            <field name="name">kojto.finance.accounting.subtypes.list</field>
            <field name="model">kojto.finance.accounting.subtypes</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_finance_accounting_subtypes_list" default_order="subtype_number asc">
                    <field name="subtype_number" />
                    <field name="name" optional="show" />
                    <field name="template_type_ids" widget="many2many_tags"/>
                </list>
            </field>
        </record>
        <!-- Form Views -->
        <record model="ir.ui.view" id="view_kojto_finance_accounting_subtypes_form">
            <field name="name">kojto.finance.accounting.subtypes.form</field>
            <field name="model">kojto.finance.accounting.subtypes</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_finance_accounting_subtypes_form">
                    <sheet class="ko-form-body">
                        <!-- Custom Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <!-- Left Section -->
                            <div class="d-flex align-items-center">
                                <div class="ko-form-view-title">
                                    <span>ACCOUNTING SUBTYPE</span>
                                </div>
                            </div>
                        </div>
                        <group>
                            <field name="subtype_number" />
                            <field name="name" />
                            <field name="template_type_ids" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Search Views -->
        <record model="ir.ui.view" id="view_kojto_finance_accounting_subtypes_search">
            <field name="name">kojto.finance.accounting.subtypes.search</field>
            <field name="model">kojto.finance.accounting.subtypes</field>
            <field name="arch" type="xml">
                <search string="accounting">
                    <field name="subtype_number" />
                    <field name="name" />
                    <field name="template_type_ids" />
                </search>
            </field>
        </record>
        <!-- Actions to Return Model Views -->
        <record model="ir.actions.act_window" id="action_kojto_finance_accounting_subtypes">
            <field name="name">Accounting subtypes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.finance.accounting.subtypes</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create</p>
            </field>
        </record>
    </data>
</odoo>
