<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="view_kojto_finance_accounting_templates_list">
            <field name="name">kojto.finance.accounting.templates.list</field>
            <field name="model">kojto.finance.accounting.templates</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_finance_accounting_templates_list">
                    <field name="name" />
                    <field name="template_type_id" />
                    <field name="accounting_ops_ids" widget="many2many_tags" />
                    <field name="requires_identifier_id" widget="boolean_toggle" string="Identifier" />
                    <field name="requires_subtype_id" widget="boolean_toggle" string="Subtype" />
                    <field name="requires_ref_number" widget="boolean_toggle" string="Ref Number" />
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="view_kojto_finance_accounting_templates_form">
            <field name="name">kojto.finance.accounting.templates.form</field>
            <field name="model">kojto.finance.accounting.templates</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_finance_accounting_templates_form">
                    <sheet class="ko-form-body">
                        <div class="row">
                            <group class="col-12">
                                <field name="name" />
                                <field name="description" string="Template description" />
                                <field name="template_type_id" />
                                <field name="primary_type" />
                                <field name="requires_subtype_id" widget="boolean_toggle" />
                                <field name="requires_identifier_id" widget="boolean_toggle" />
                                <field name="requires_ref_number" widget="boolean_toggle" />
                                <field name="accounting_ops_ids" string="Accounting Operations">
                                    <list editable="bottom" default_order="row_number asc">
                                        <field name="row_number" />
                                        <field name="acc_operation_type" />
                                        <field name="acc_operation" />
                                        <field name="debit_account_id" />
                                        <field name="credit_account_id" />
                                    </list>
                                </field>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="view_kojto_finance_accounting_templates_search">
            <field name="name">kojto.finance.accounting.templates.search</field>
            <field name="model">kojto.finance.accounting.templates</field>
            <field name="arch" type="xml">
                <search string="accounting">
                    <field name="name" />
                    <field name="template_type_id" />
                    <field name="description" />
                </search>
            </field>
        </record>

        <!-- Actions to Return Model Views -->
        <record model="ir.actions.act_window" id="action_kojto_finance_accounting_templates">
            <field name="name">Accounting templates</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.finance.accounting.templates</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create</p>
            </field>
        </record>
    </data>
</odoo>
