<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View -->
        <record id="view_kojto_hr_face_recognition_list" model="ir.ui.view">
            <field name="name">kojto.hr.face.recognition.list</field>
            <field name="model">kojto.hr.face.recognition</field>
            <field name="arch" type="xml">
                <list class="ko-list-main" string="Time Tracking Images">
                    <field name="datetime_taken" string="Date/Time" />
                    <field name="employee_id" string="Employee" />
                    <field name="image" class="ko-w-30 kojto-popup-img" widget="kojto_attachment_preview" />
                </list>
            </field>
        </record>

        <!-- Action -->
        <record id="action_kojto_hr_face_recognition" model="ir.actions.act_window">
            <field name="name">Time Tracking Images</field>
            <field name="res_model">kojto.hr.face.recognition</field>
            <field name="view_mode">list</field>
            <field name="context">{'search_default_group_by_employee': 1}</field>
        </record>

    </data>
</odoo>
