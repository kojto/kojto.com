<?xml version="1.0" encoding="UTF-8"?>
<!--Inherited web.ImageField for adding a button  -->
<templates id="template" xml:space="preserve">
    <t t-name="kojto_hr_face_recognition.cameraField" t-inherit="web.ImageField" t-inherit-mode="extension">
        <xpath expr="//button[hasclass('o_select_file_button')]" position="after">
            <button class="btn btn-light border-0 rounded-circle m-1 p-1 camera" data-tooltip="Camera" t-on-click="onFileCamera">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-camera" viewBox="0 0 16 16">
                    <path d="M15 12a1 1 0 0 1-1 1H2a1 1 0 0 1-1-1V6a1 1 0 0 1 1-1h1.172a3 3 0 0 0 2.12-.879l.83-.828A1 1 0 0 1 6.827 3h2.344a1 1 0 0 1 .707.293l.828.828A3 3 0 0 0 12.828 5H14a1 1 0 0 1 1 1zM2 4a2 2 0 0 0-2 2v6a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2h-1.172a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 9.172 2H6.828a2 2 0 0 0-1.414.586l-.828.828A2 2 0 0 1 3.172 4z"/>
                    <path d="M8 11a2.5 2.5 0 1 1 0-5 2.5 2.5 0 0 1 0 5m0 1a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7M3 6.5a.5.5 0 1 1-1 0 .5.5 0 0 1 1 0"/>
                </svg>
            </button>
            <center>
                <div id="myModal" class="modal" style=" width:35%; height:58%;">
                    <div class="modal-content">
                        <header>
                            <video id="videoCam" t-ref="video"/>
                        </header>
                        <footer>
                            <center>
                                <button id="click_photo" t-on-click="ImageCapture">Capture</button>
                                <button id="stop-camera-button" t-ref="stop-camera-button">Cancel</button>
                            </center>
                        </footer>
                        <span hidden="hidden">
                            <canvas id="canvas" width="150" height="100" t-ref="canvas"/>
                        </span>
                    </div>
                </div>
            </center>
        </xpath>
    </t>
</templates>
