<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- list View -->
        <record model="ir.ui.view" id="view_kojto_delivery_consumed_materials_list">
            <field name="name">kojto.delivery.consumed.materials.list</field>
            <field name="model">kojto.delivery.consumed.materials</field>
            <field name="arch" type="xml">
                <list class="ko-list-main" string="Consumed Materials in Delivery" editable="top" delete="true">
                    <field name="name"/>
                    <field name="delivery_content_id" readonly="1" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                    <field name="description"/>
                    <field name="invoice_id"/>
                    <field name="invoice_content_id"/>
                    <field name="batch_id"/>
                    <field name="batch_unit_id" readonly="1"/>
                    <field name="batch_quantity_consumed"/>
                    <button name="delete_consumed_material" type="object" string=" " icon="fa-trash" class="btn"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="view_kojto_delivery_consumed_materials_form">
            <field name="name">kojto.delivery.consumed.materials.form</field>
            <field name="model">kojto.delivery.consumed.materials</field>
            <field name="arch" type="xml">
                <form class="ko-form-main">
                    <sheet class="ko-form-body">
                        <!-- Custom Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="d-flex align-items-center">
                                <div class="ko-form-view-title">
                                    <span>DELIVERY CONSUMED MATERIALS</span>
                                </div>
                            </div>
                        </div>
                        <separator class="col-lg-12 separator"/>
                        <div class="row">
                            <group class="col-lg-6">
                                <field name="name"/>
                                <field name="delivery_content_id" options="{'no_create': True}"/>
                                <field name="invoice_id" options="{'no_create': True}"/>
                                <field name="invoice_content_id" options="{'no_create': True}"/>
                                <field name="batch_id" options="{'no_create': True}"/>
                                <field name="batch_unit_id" readonly="1"/>
                                <field name="batch_quantity_consumed"/>
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="view_kojto_delivery_consumed_materials_search">
            <field name="name">kojto.delivery.consumed.materials.search</field>
            <field name="model">kojto.delivery.consumed.materials</field>
            <field name="arch" type="xml">
                <search string="Delivery Consumed Materials">
                    <field name="name"/>
                    <field name="delivery_content_id"/>
                    <field name="batch_id"/>
                    <field name="invoice_id"/>
                    <field name="invoice_content_id"/>
                    <separator/>
                    <filter string="With Invoice" name="with_invoice" domain="[('invoice_id', '!=', False)]"/>
                    <filter string="Without Invoice" name="without_invoice" domain="[('invoice_id', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Delivery Content" name="group_by_content" context="{'group_by': 'delivery_content_id'}"/>
                        <filter string="Batch" name="group_by_batch" context="{'group_by': 'batch_id'}"/>
                        <filter string="Invoice" name="group_by_invoice" context="{'group_by': 'invoice_id'}"/>
                        <filter string="Invoice Content" name="group_by_invoice_content" context="{'group_by': 'invoice_content_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="action_kojto_delivery_consumed_materials">
            <field name="name">Delivery Consumed Materials</field>
            <field name="res_model">kojto.delivery.consumed.materials</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first delivery consumed material
                </p>
            </field>
        </record>
    </data>
</odoo>
