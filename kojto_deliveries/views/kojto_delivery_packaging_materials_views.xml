<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="view_kojto_delivery_package_materials_list">
            <field name="name">kojto.delivery.packaging.materials.list</field>
            <field name="model">kojto.delivery.packaging.materials</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_delivery_packaging_materials_list" limit="100" sample="1" editable="top">
                    <field name="active" widget="boolean_toggle"/>
                    <field name="name" />
                    <field name="weight" />
                    <field name="unit_id" />
                    <field name="width" />
                    <field name="depth" />
                    <field name="height" />
                    <field name="include_in_cmr" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record model="ir.ui.view" id="view_kojto_delivery_package_materials_form">
            <field name="name">kojto.delivery.packaging.materials.form</field>
            <field name="model">kojto.delivery.packaging.materials</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_delivery_packaging_materials_form">
                    <sheet class="ko-form-body">
                        <!-- Custom Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <!-- Left Section -->
                            <div class="d-flex align-items-center">
                                <div class="ko-form-view-title">
                                    <span>DELIVERY PACKAGE MATERIAL</span>
                                </div>
                            </div>
                        </div>
                        <!-- Custom Header End -->
                        <br />
                        <group class="col-lg-6">
                            <field name="active" widget="boolean_toggle"/>
                            <field name="name" />
                            <field name="weight" />
                            <field name="description" />
                            <field name="include_in_cmr" widget="boolean_toggle"/>
                        </group>
                        <group class="col-lg-6">
                            <field name="unit_id" />
                            <field name="width" />
                            <field name="depth" />
                            <field name="height" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record model="ir.ui.view" id="view_kojto_delivery_packaging_materials_search">
            <field name="name">kojto.delivery.packaging.materials.search</field>
            <field name="model">kojto.delivery.packaging.materials</field>
            <field name="arch" type="xml">
                <search string="Delivery Packaging Materials">
                    <field name="name" />
                    <field name="weight" />
                    <field name="unit_id" />
                    <field name="width" />
                    <field name="depth" />
                    <field name="height" />
                    <field name="active" />
                </search>
            </field>
        </record>

        <!-- Action to Return Model Views -->
        <record model="ir.actions.act_window" id="action_kojto_delivery_packaging_materials">
            <field name="name">Delivery Packaging Materials</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.delivery.packaging.materials</field>
            <field name="view_id" ref="view_kojto_delivery_package_materials_list"/>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Add Delivery Packaging Materials</p>
            </field>
        </record>
    </data>
</odoo>
