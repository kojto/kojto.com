<odoo>
    <data>
        <!-- List Views -->
        <record model="ir.ui.view" id="view_kojto_delivery_contents_list">
            <field name="name">kojto.delivery.contents.list</field>
            <field name="model">kojto.delivery.contents</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_delivery_contents_list" limit="100" sample="1">
                    <field name="delivery_id" />
                    <field name="name" />
                    <field name="quantity" />
                    <field name="quantity_package_contents" />
                    <field name="unit_id" />
                    <field name="net_weight" />
                </list>
            </field>
        </record>

        <!-- Form Views -->
        <record model="ir.ui.view" id="view_kojto_delivery_contents_form">
            <field name="name">kojto.delivery.contents.form</field>
            <field name="model">kojto.delivery.contents</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_delivery_contents_form">
                    <sheet class="ko-form-body">
                        <!-- Custom Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <!-- Left Section -->
                            <div class="d-flex align-items-center">
                                <div class="ko-form-view-title">
                                    <span>DELIVERY CONTENT</span>
                                </div>
                            </div>
                        </div>
                        <separator class="col-lg-12 separator" />
                        <div class="row">
                            <group class="col-lg-6">
                                <field name="delivery_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                <field name="name" />
                                <field name="quantity" />
                                <field name="unit_id" />
                            </group>
                            <group class="col-lg-6">
                                <field name="position" />
                            </group>
                        </div>
                        <separator class="col-lg-12 separator" />
                        <div class="row">
                            <group class="col-lg-6">
                                <field name="unit_weight" />
                                <field name="net_weight" />
                            </group>
                            <group class="col-lg-6">
                                <field name="quantity_package_contents" />
                            </group>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Search Views -->
        <record model="ir.ui.view" id="view_kojto_delivery_contents_search">
            <field name="name">kojto.delivery.contents.search</field>
            <field name="model">kojto.delivery.contents</field>
            <field name="arch" type="xml">
                <search string="Delivery Contents">
                    <field name="delivery_id" />
                    <field name="name" />
                    <field name="quantity" />
                </search>
            </field>
        </record>
        <!-- Actions to Return Model Views -->
        <record model="ir.actions.act_window" id="action_kojto_delivery_contents">
            <field name="name">Delivery Contents</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.delivery.contents</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"> Add Delivery Contents </p>
            </field>
        </record>
    </data>
</odoo>
