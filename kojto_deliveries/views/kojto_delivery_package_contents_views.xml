<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List Views -->
        <record model="ir.ui.view" id="view_kojto_delivery_package_contents_list_at">
            <field name="name">kojto.delivery.package.contents.list.at</field>
            <field name="model">kojto.delivery.package.contents</field>
            <field name="arch" type="xml">
                <list class="ko-list-main" limit="100" sample="1" editable="bottom" delete="true">
                    <header>
                        <button name="action_fill_with_unallocated_contents" type="object" string="Fill with Unallocated Contents" class="btn btn-primary" display="always"/>
                    </header>
                    <field name="delivery_package_id" readonly="1"/>
                    <field name="position" />
                    <field name="delivery_content_id"/>
                    <field name="quantity" />
                    <field name="unit_weight" />
                    <field name="total_weight" />
                    <button name="delete_package_content" type="object" string=" " icon="fa-trash" class="btn"/>
                </list>
            </field>
        </record>

        <!-- Form Views -->
        <record model="ir.ui.view" id="view_kojto_delivery_package_contents_form">
            <field name="name">kojto.delivery.package.contents.form</field>
            <field name="model">kojto.delivery.package.contents</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_delivery_package_contents_form">
                    <sheet class="ko-form-body">
                        <!-- Custom Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <!-- Left Section -->
                            <div class="d-flex align-items-center">
                                <div class="ko-form-view-title">
                                    <span>PACKAGE CONTENT</span>
                                </div>
                            </div>
                        </div>
                        <!-- Custom Header End -->
                        <br />
                        <group class="col-lg-6">
                            <field name="delivery_id" invisible="1" />
                            <field name="position" />
                            <field name="delivery_content_id" options="{'no_create': True}" domain="[('delivery_id', '=', delivery_id)]" />
                            <field name="quantity" />
                            <field name="unit_weight" />
                            <field name="total_weight" />
                            <field name="delivery_package_id" options="{'no_create': True}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Search Views -->
        <record model="ir.ui.view" id="view_kojto_delivery_package_contents_search">
            <field name="name">kojto.delivery.package.contents.search</field>
            <field name="model">kojto.delivery.package.contents</field>
            <field name="arch" type="xml">
                <search string="Delivery Package Contents">
                    <field name="position" />
                    <field name="delivery_content_id" />
                    <field name="delivery_package_id" />
                </search>
            </field>
        </record>

        <!-- Actions to Return Model Views -->
        <record model="ir.actions.act_window" id="action_kojto_delivery_package_contents">
            <field name="name">Delivery Package Contents</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.delivery.package.contents</field>
            <field name="view_id" ref="view_kojto_delivery_package_contents_list_at"/>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"> Add Delivery Package Contents </p>
            </field>
        </record>
    </data>
</odoo>
