<odoo>
    <data>
        <!-- List Views -->
        <record model="ir.ui.view" id="view_kojto_delivery_packaging_material_items_list">
            <field name="name">kojto.delivery.packaging.material.items.list</field>
            <field name="model">kojto.delivery.packaging.material.items</field>
            <field name="arch" type="xml">
                <list class="ko-list-main" limit="100" sample="1" editable="bottom" delete="true">
                    <field name="delivery_package_id" readonly="1"/>
                    <field name="position" />
                    <field name="packaging_material_id" />
                    <field name="quantity" />
                    <field name="unit_weight" />
                    <field name="total_weight" />
                    <button name="delete_packaging_material_item" type="object" string=" " icon="fa-trash" class="btn"/>
                </list>
            </field>
        </record>
        <!-- Form Views -->
        <record model="ir.ui.view" id="view_kojto_delivery_packaging_material_items_form">
            <field name="name">kojto.delivery.packaging.material.items.form</field>
            <field name="model">kojto.delivery.packaging.material.items</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_delivery_packaging_material_items_form">
                    <sheet class="ko-form-body">
                        <!-- Custom Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <!-- Left Section -->
                            <div class="d-flex align-items-center">
                                <div class="ko-form-view-title">
                                    <span>DELIVERY PACKAGE MATERIAL ITEM</span>
                                </div>
                            </div>
                        </div>
                        <!-- Custom Header End -->
                        <br />
                        <group>
                            <field name="position" />
                            <field name="packaging_material_id" options="{'no_create': True}" />
                            <field name="quantity" />
                            <field name="unit_weight" />
                            <field name="total_weight" />
                            <field name="delivery_package_id" options="{'no_create': True}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Search Views -->
        <record model="ir.ui.view" id="view_kojto_delivery_packaging_material_items_search">
            <field name="name">kojto.delivery.packaging.material.items.search</field>
            <field name="model">kojto.delivery.packaging.material.items</field>
            <field name="arch" type="xml">
                <search string="Delivery Packaging Material Items">
                    <field name="position" />
                    <field name="packaging_material_id" />
                    <field name="delivery_package_id" />
                </search>
            </field>
        </record>
        <!-- Actions to Return Model Views -->
        <record model="ir.actions.act_window" id="action_kojto_delivery_packaging_material_items">
            <field name="name">Delivery Packaging Material Items</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.delivery.packaging.material.items</field>
            <field name="view_id" ref="view_kojto_delivery_packaging_material_items_list"/>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face"> Add Delivery Packaging Material Items </p>
            </field>
        </record>
    </data>
</odoo>
