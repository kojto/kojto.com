<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- list View -->
    <record id="view_kojto_warehouses_inspection_report_list" model="ir.ui.view">
        <field name="name">kojto.warehouses.inspection.report.list</field>
        <field name="model">kojto.warehouses.inspection.report</field>
        <field name="arch" type="xml">
            <list string="Inspection Reports" class="ko-list-main">
                <field name="name"/>
                <field name="batch_id"/>
                <field name="counterparty_id"/>
                <field name="item_ids" widget="many2many_tags"/>
                <field name="date_issued"/>
                <field name="inspected_by"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_kojto_warehouses_inspection_report_form" model="ir.ui.view">
        <field name="name">kojto.warehouses.inspection.report.form</field>
        <field name="model">kojto.warehouses.inspection.report</field>
        <field name="arch" type="xml">
            <form string="Inspection Report" class="ko-form-main view_kojto_warehouses_inspection_report_form">
                <sheet class="ko-form-body ko-form-main">
                    <!-- Header Section -->
                    <div class="d-flex justify-content-between align-items-center ko-form-main-header-line" style="margin-bottom: 15px;">
                        <div class="w-100 px-0">
                            <div class="row no-gutters">
                                <div class="col-lg-4 me-0">
                                    <div class="ko-form-view-title">
                                        <field name="name" class="ko-form-view-title" readonly="1" force_save="1"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 d-flex align-items-center justify-content-center py-2 py-md-0">
                                    <div class="d-flex align-items-center">
                                        <field name="language_id" widget="selection_badge" class="ko-offer-wselection-badge"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 d-flex align-items-center justify-content-end py-2 py-md-0">
                                    <div class="dropdown ms-2">
                                        <button name="print_document_as_pdf" class="bg-transparent border-0 d-flex align-items-center" type="object" title="Print">
                                            <i>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                                    <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1" />
                                                    <path d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1" />
                                                </svg>
                                            </i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <separator class="separator-slim-top" />
                    <div class="row" style="margin-right: 2px;">
                        <div class="col-lg-6">
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="status" widget="selection_badge"/>
                                <field name="name"/>
                                <field name="batch_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}"/>
                                <field name="date_issued"/>
                                <field name="inspected_by" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}" readonly="1"/>
                                <field name="counterparty_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}" readonly="1"/>
                            </group>
                            <!-- Company Information Section -->
                            <group string="Company Information">
                                <field name="company_id" invisible="1"/>
                                <field name="company_name_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="company_address_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="company_email_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                                <field name="company_phone_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}"/>
                            </group>
                        </div>
                        <div class="col-lg-6" style="padding-right: 0px;">
                            <group string="Checks performed"/>
                            <table class="o_table_no_border o_table_no_spacing" style="border: none !important; width: 100%">
                                <tr style="height: 20px;">
                                    <td width="35%"><label for="supplier_ok" string="Supplier"/></td>
                                    <td width="10%"><field name="supplier_ok" widget="boolean_toggle" class="o_field_boolean"/></td>
                                    <td width="55%"><field name="supplier_note" class="o_field_text"/></td>
                                </tr>
                                <tr style="height: 20px;">
                                    <td width="35%"><label for="material_ok" string="Material"/></td>
                                    <td width="10%"><field name="material_ok" widget="boolean_toggle" class="o_field_boolean"/></td>
                                    <td width="55%"><field name="material_note" class="o_field_text"/></td>
                                </tr>
                                <tr style="height: 20px;">
                                    <td width="35%"><label for="material_grade_ok" string="Material Grade"/></td>
                                    <td width="10%"><field name="material_grade_ok" widget="boolean_toggle" class="o_field_boolean"/></td>
                                    <td width="55%"><field name="material_grade_note" class="o_field_text"/></td>
                                </tr>
                                <tr style="height: 20px;">
                                    <td width="35%"><label for="quantity_ok" string="Quantity"/></td>
                                    <td width="10%"><field name="quantity_ok" widget="boolean_toggle" class="o_field_boolean"/></td>
                                    <td width="55%"><field name="quantity_note" class="o_field_text"/></td>
                                </tr>
                                <tr style="height: 20px;">
                                    <td width="35%"><label for="invoice_ok" string="Invoice"/></td>
                                    <td width="10%"><field name="invoice_ok" widget="boolean_toggle" class="o_field_boolean"/></td>
                                    <td width="55%"><field name="invoice_note" class="o_field_text"/></td>
                                </tr>
                                <tr style="height: 20px;">
                                    <td width="35%"><label for="inspection_certificates_ok" string="Inspection Certificates"/></td>
                                    <td width="10%"><field name="inspection_certificates_ok" widget="boolean_toggle" class="o_field_boolean"/></td>
                                    <td width="55%"><field name="inspection_certificates_note" class="o_field_text"/></td>
                                </tr>
                                <tr style="height: 20px;">
                                    <td width="35%"><label for="test_reports_ok" string="Test Reports"/></td>
                                    <td width="10%"><field name="test_reports_ok" widget="boolean_toggle" class="o_field_boolean"/></td>
                                    <td width="55%"><field name="test_reports_note" class="o_field_text"/></td>
                                </tr>
                                <tr style="height: 20px;">
                                    <td width="35%"><label for="declaration_ok" string="Declaration"/></td>
                                    <td width="10%"><field name="declaration_ok" widget="boolean_toggle" class="o_field_boolean"/></td>
                                    <td width="55%"><field name="declaration_note" class="o_field_text"/></td>
                                </tr>
                                <tr style="height: 20px;">
                                    <td width="35%"><label for="surface_defects_ok" string="Surface Defects"/></td>
                                    <td width="10%"><field name="surface_defects_ok" widget="boolean_toggle" class="o_field_boolean"/></td>
                                    <td width="55%"><field name="surface_defects_note" class="o_field_text"/></td>
                                </tr>
                            </table>
                            <group string="General Note"/>
                            <field name="notes" placeholder="Enter additional notes..."/>
                        </div>
                    </div>
                    <separator/>
                    <div class="col-lg-12">
                        <group string="Items"/>
                        <field name="item_ids" widget="one2many" options="{'editable': 'bottom'}">
                            <list editable="bottom" class="ko-list-main" order="name asc">
                                <field name="active" widget="boolean_toggle"/>
                                <field name="name"/>
                                <field name="item_type"/>
                                <field name="item_summary"/>
                                <field name="weight" string="Weight (kg)"/>
                                <field name="current_item_quantity" string="Current Qty"/>
                                <field name="unit_id"/>
                            </list>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_kojto_warehouses_inspection_report_search" model="ir.ui.view">
        <field name="name">kojto.warehouses.inspection.report.search</field>
        <field name="model">kojto.warehouses.inspection.report</field>
        <field name="arch" type="xml">
            <search string="Search Inspection Reports">
                <field name="name"/>
                <field name="batch_id"/>
                <field name="item_ids"/>
                <field name="inspected_by"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('status', '=', 'confirmed')]"/>
                <filter string="Rejected" name="rejected" domain="[('status', '=', 'rejected')]"/>
                <filter string="Pending" name="pending" domain="[('status', '=', 'pending')]"/>
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Batch" name="group_by_batch" context="{'group_by': 'batch_id'}"/>
                    <filter string="Inspector" name="group_by_inspector" context="{'group_by': 'inspected_by'}"/>
                    <filter string="Status" name="group_by_status" context="{'group_by': 'status'}"/>
                    <filter string="Date" name="group_by_date" context="{'group_by': 'date_issued'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_kojto_warehouses_inspection_report" model="ir.actions.act_window">
        <field name="name">Inspection Reports</field>
        <field name="res_model">kojto.warehouses.inspection.report</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first inspection report
            </p>
            <p>
                Track inspection reports for items in batches.
            </p>
        </field>
    </record>

    <!-- Create Inspection Report Action -->
    <record id="action_create_inspection_report" model="ir.actions.act_window">
        <field name="name">Create Inspection Report</field>
        <field name="res_model">kojto.warehouses.inspection.report</field>
        <field name="view_mode">form</field>
        <field name="target">current</field>
        <field name="view_id" ref="view_kojto_warehouses_inspection_report_form"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new inspection report
            </p>
            <p>
                Select a batch and items to create an inspection report.
            </p>
        </field>
    </record>
</odoo>
