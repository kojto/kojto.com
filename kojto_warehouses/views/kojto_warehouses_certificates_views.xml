<?xml version="1.0" encoding="utf-8"?>
<!-- kojto_warehouses/views/kojto_warehouses_certificates_views.xml -->
<odoo>
    <!-- Certificates List View -->
    <record id="view_kojto_warehouses_certificates_list" model="ir.ui.view">
        <field name="name">kojto.warehouses.certificates.list</field>
        <field name="model">kojto.warehouses.certificates</field>
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <list class="ko-list-main" editable="top">
                <field name="counterparty_id" string="Manufacturer" optional="show"/>
                <field name="name" string="Certificate Name"/>
                <field name="date_issued" string="Date Issued"/>
                <field name="certificate_type" string="Type"/>
                <field name="standard" string="Standard"/>
                <field name="batch_id" string="Batch" options="{'no_create_edit': True}"/>
                <field name="description" string="Description"/>
                <field name="attachment_id" widget="many2many_binary" optional="show" options="{'accepted_file_extensions': 'pdf', 'preview_image': 'pdf'}" invisible="id == False" />
            </list>
        </field>
    </record>


    <!-- Certificates Search View -->
    <record id="view_kojto_warehouses_certificates_search" model="ir.ui.view">
        <field name="name">kojto.warehouses.certificates.search</field>
        <field name="model">kojto.warehouses.certificates</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="certificate_type"/>
                <field name="standard"/>
                <field name="batch_id"/>
                <field name="description"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="groupby_type" context="{'group_by': 'certificate_type'}"/>
                    <filter string="Standard" name="groupby_standard" context="{'group_by': 'standard'}"/>
                    <filter string="Batch" name="groupby_batch" context="{'group_by': 'batch_id'}"/>
                </group>
            </search>
        </field>
    </record>


    <!-- Certificate Action -->
    <record id="action_kojto_warehouses_certificates" model="ir.actions.act_window">
        <field name="name">Certificates</field>
        <field name="res_model">kojto.warehouses.certificates</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_kojto_warehouses_certificates_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first certificate!
            </p>
        </field>
    </record>
</odoo>
