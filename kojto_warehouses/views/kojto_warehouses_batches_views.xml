<?xml version="1.0" encoding="utf-8"?>
<!-- kojto_warehouses/views/kojto_warehouses_batches_views.xml -->
<odoo>
    <!-- Batches List View -->
    <record id="view_kojto_warehouses_batches_list" model="ir.ui.view">
        <field name="name">kojto.warehouses.batches.list</field>
        <field name="model">kojto.warehouses.batches</field>
        <field name="type">list</field>
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <list class="ko-list-main">
                <field name="active" widget="boolean_toggle" decoration-success="active" decoration-danger="not active" string="Is Active" />
                <field name="batch_type" string="Type" />
                <field name="counterparty_id" string="Manufacturer" optional="show"/>
                <field name="name" string="Batch Name" />
                <field name="name_secondary" string="Secondary Name" optional="show"/>
                <field name="material_id" string="Material" options="{'no_create_edit': True}" optional="hide"/>
                <field name="batch_summary" string="Batch Summary" optional="show"/>
                <field name="current_batch_quantity" string="Current Quantity" optional="show"/>
                <field name="unit_id" string="Unit" optional="show" class="text-right"/>
                <field name="current_batch_value" string="Current Value" optional="show" widget="monetary"/>
                <field name="date_issue" string="Issued On" class="text-right"/>
                <field name="description" string="Description" optional="show"/>
                <field name="store_id" string="Store" optional="show"/>
                <button name="action_create_inspection_report" string="Create IR" type="object" class="btn" help="Create Inspection Report"/>
            </list>
        </field>
    </record>

    <!-- Batches Form View -->
    <record id="view_kojto_warehouses_batches_form" model="ir.ui.view">
        <field name="name">kojto.warehouses.batches.form</field>
        <field name="model">kojto.warehouses.batches</field>
        <field name="priority" eval="10" />
        <field name="arch" type="xml">
            <form string="Batch" class="ko-form-main view_kojto_warehouses_batches_form">
                <sheet class="ko-form-body ko-form-main">
                    <!-- Header Section -->
                    <div class="d-flex justify-content-between align-items-center ko-form-main-header-line" style="margin-bottom: 5px;">
                        <div class="w-100 px-0">
                            <div class="row no-gutters">
                                <div class="col-lg-4 me-0" style="padding-left: 0px;">
                                    <div class="ko-form-view-title" style="padding-top: 1px;">
                                        <field name="name" class="ko-form-view-title" readonly="1" force_save="1"/>
                                    </div>
                                </div>
                                <div class="col-lg-4 d-flex align-items-center justify-content-center py-2 py-md-0">
                                    <div class="d-flex align-items-center">
                                        <!-- Empty div for future use -->
                                    </div>
                                </div>
                                <div class="col-lg-4 d-flex align-items-center justify-content-end py-2 py-md-0">
                                    <div class="dropdown ms-2">
                                        <field name="batch_type" string="Type" widget="selection_badge" style="margin-bottom: 0; padding-bottom: 0;" invisible="items_ids"/>
                                        <field name="batch_type" string="Type" class="ko-form-view-title" readonly="1" force_save="1" style="margin-bottom: 0; padding-bottom: 0;" invisible="not items_ids"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <separator class="separator-slim-top" />
                    <!-- Form Content  -->
                    <div class="row no-gutters" style="padding-right: 0; margin-right: 0;">
                        <div class="col-lg-3">
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="counterparty_id" optional="show"/>
                                <field name="name_secondary"/>
                                <field name="store_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}"/>
                                <field name="material_id" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}"/>
                                <field name="profile_id" invisible="batch_type != 'bar'" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}"/>
                                <field name="thickness" invisible="batch_type != 'sheet'"/>
                                <field name="part_type" invisible="batch_type != 'part'"/>
                            </group>
                        </div>
                        <div class="col-lg-3">
                            <group>
                                <field name="invoice_id" required="1" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}"/>
                                <field name="invoice_content_id" required="1" domain="[('invoice_id', '=', invoice_id)]" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}"/>
                                <field name="accounting_identifier_domain" invisible="1"/>
                                <field name="accounting_identifier_id" required="1" domain="accounting_identifier_domain" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}"/>
                                <field name="unit_price"/>
                                <field name="unit_price_conversion_rate"/>
                            </group>
                        </div>
                        <div class="col-lg-3">
                            <group>
                                <field name="date_issue" readonly="1" force_save="1"/>
                                <field name="unit_price_converted"/>
                                <field name="unit_id" class="text-end"/>
                                <field name="current_batch_quantity"/>
                                <field name="current_batch_value"/>
                            </group>
                        </div>
                        <div class="col-lg-3">
                            <div>
                                <field name="description" placeholder="Description"/>
                            </div>
                            <button name="action_create_inspection_report" string="Create Inspection Report" type="object" class="btn btn-primary" help="Create Inspection Report"/>
                        </div>

                        <separator/>
                        <div class="col-lg-12" style="margin-right: 0;">
                            <notebook>
                                <page string="Items">
                                    <!-- Generate Items Button - visible when batch exists and has no items -->
                                    <div class="alert alert-info" role="alert" invisible="not id or items_ids">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <h5>Generate Items</h5>
                                                <p class="text-muted">
                                                    <small>Generate multiple items with the same dimensions for this batch.</small>
                                                </p>
                                                <button name="action_generate_items" string="Generate Items" type="object" class="btn btn-primary"
                                                        help="Open wizard to generate multiple items with specified dimensions"/>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Items Section -->
                                    <div class="col-lg-12" style="padding-right: 0; margin-right: 0;">
                                        <!-- Part Batch Type -->
                                        <div invisible="batch_type != 'part'" style="margin-right: 0;">
                                            <field name="items_ids">
                                                <list editable="bottom" class="ko-list-main" order="name asc" limit="200">
                                                    <field name="active" string=" " widget="boolean_toggle"/>
                                                    <field name="current_item_quantity" string="Current Quantity"/>
                                                    <field name="unit_id" class="text-right"/>
                                                    <field name="name"/>
                                                    <field name="parent_item_id" domain="[('id', 'in', allowed_parent_item_ids)]" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}"/>
                                                    <field name="name_secondary"/>
                                                    <field name="item_description"/>
                                                    <button name="action_open_item_form" type="object" icon="fa-external-link" string=" " help="Open Item Form"/>
                                                    <button name="action_create_outgoing_transaction" string="" type="object" class="btn fa fa-minus" help="Create Outgoing Transaction of this item" invisible="current_item_quantity == 0" model="kojto.warehouses.items"/>
                                                </list>
                                            </field>
                                        </div>
                                        <!-- Sheet Batch Type -->
                                        <div invisible="batch_type != 'sheet'" style="margin-right: 0;">
                                            <field name="items_ids">
                                                <list editable="bottom" class="ko-list-main" order="name asc" limit="200">
                                                    <field name="active" widget="boolean_toggle"/>
                                                    <field name="current_item_quantity" string="Current Quantity"/>
                                                    <field name="unit_id" class="text-right"/>
                                                    <field name="name"/>
                                                    <field name="parent_item_id" domain="[('id', 'in', allowed_parent_item_ids)]" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}"/>
                                                    <field name="name_secondary"/>
                                                    <field name="item_description"/>
                                                    <field name="weight" string="G (kg)"/>
                                                    <field name="length" string="L (m)"/>
                                                    <field name="width" string="W (m)"/>
                                                    <field name="thickness" string="t (mm)"/>
                                                    <button name="action_open_item_form" type="object" icon="fa-external-link" string=" " help="Open Item Form"/>
                                                    <button name="action_create_outgoing_transaction" string="" type="object" class="btn fa fa-minus" help="Create Outgoing Transaction of this item" invisible="current_item_quantity == 0" model="kojto.warehouses.items"/>
                                                </list>
                                            </field>
                                        </div>
                                        <!-- Bar Batch Type -->
                                        <div invisible="batch_type != 'bar'" style="margin-right: 0;">
                                            <field name="items_ids">
                                                <list editable="bottom" class="ko-list-main" order="name asc" limit="200">
                                                    <field name="active" widget="boolean_toggle"/>
                                                    <field name="current_item_quantity" string="Current Quantity"/>
                                                    <field name="unit_id" class="text-right"/>
                                                    <field name="name"/>
                                                    <field name="parent_item_id" domain="[('id', 'in', allowed_parent_item_ids)]" options="{'no_create_edit': True, 'no_create': True, 'no_edit': True, 'no_delete': True, 'no_open': True}"/>
                                                    <field name="name_secondary"/>
                                                    <field name="item_description"/>
                                                    <field name="weight" string="G (kg)"/>
                                                    <field name="length" string="L (m)"/>
                                                    <field name="profile_id" string="Profile"/>
                                                    <button name="action_open_item_form" type="object" icon="fa-external-link" string=" " help="Open Item Form"/>
                                                    <button name="action_create_outgoing_transaction" string="" type="object" class="btn fa fa-minus" help="Create Outgoing Transaction of this item" invisible="current_item_quantity == 0" model="kojto.warehouses.items"/>
                                                </list>
                                            </field>
                                        </div>
                                    </div>
                                </page>

                                <page string="Transactions" name="transactions">
                                    <div class="col-lg-12">
                                        <!-- Part Batch Type -->
                                        <div invisible="batch_type != 'part'">
                                            <field name="transaction_ids" widget="one2many" options="{'editable': 'bottom'}" context="{'default_batch_id': id}">
                                                <list editable="bottom" class="ko-list-main" default_order="date_issue asc" limit="300">
                                                    <field name="to_from_store" decoration-success="to_from_store == 'to_store'" decoration-danger="to_from_store == 'from_store'"/>
                                                    <field name="name" readonly="1"/>
                                                    <field name="subcode_id"/>
                                                    <field name="item_id" domain="[('batch_id', '=', parent.id), ('parent_item_id', '=', False)]" options="{'no_create_edit': True}"/>
                                                    <field name="parent_item_id"/>
                                                    <field name="transaction_quantity_override" decoration-danger="to_from_store == 'from_store'"/>
                                                    <field name="transaction_unit_id" readonly="1"/>
                                                    <field name="date_issue"/>
                                                    <field name="issued_by" readonly="1"/>
                                                </list>
                                            </field>
                                        </div>
                                        <!-- Sheet and Bar Batch Type -->
                                        <div invisible="batch_type == 'part'">
                                            <field name="transaction_ids" widget="one2many" options="{'editable': 'bottom'}" context="{'default_batch_id': id}">
                                                <list editable="bottom" class="ko-list-main" default_order="date_issue asc" limit="300">
                                                    <field name="to_from_store" decoration-success="to_from_store == 'to_store'" decoration-danger="to_from_store == 'from_store'"/>
                                                    <field name="name" readonly="1"/>
                                                    <field name="subcode_id"/>
                                                    <field name="item_id" domain="[('batch_id', '=', parent.id), ('parent_item_id', '=', False)]" options="{'no_create_edit': True}"/>
                                                    <field name="parent_item_id" domain="[('batch_id', '=', batch_id), ('id', '!=', item_id)]"/>
                                                    <field name="transaction_quantity" readonly="1" decoration-danger="to_from_store == 'from_store'"/>
                                                    <field name="transaction_unit_id" readonly="1"/>
                                                    <field name="date_issue"/>
                                                    <field name="issued_by" readonly="1"/>
                                                </list>
                                            </field>
                                        </div>
                                    </div>
                                </page>

                                <page string="Inspection Reports">
                                    <field name="inspection_report_ids">
                                        <list class="ko-list-main" limit="300">
                                            <field name="name"/>
                                            <field name="status"/>
                                            <field name="inspected_by"/>
                                            <field name="date_issued"/>
                                        </list>
                                    </field>
                                </page>
                                <page string="Certificates">
                                    <field name="certificate_ids">
                                        <list class="ko-list-main" editable="bottom">
                                            <field name="name" string="Certificate Name"/>
                                            <field name="date_issued" string="Date Issued"/>
                                            <field name="certificate_type" string="Type"/>
                                            <field name="standard" string="Standard"/>
                                            <field name="description" string="Description"/>
                                            <field name="attachment_id" widget="many2many_binary" optional="show" options="{'accepted_file_extensions': 'pdf', 'preview_image': 'pdf'}" invisible="id == False" />
                                        </list>
                                    </field>
                                </page>
                                <page string="Chemical Composition">
                                    <field name="batch_properties_ids" style="margin-right: 0;">
                                        <list class="ko-list-main" style="margin-right: 0;" editable="bottom">
                                            <field name="name" string="Description"/>
                                            <field name="heat_number" string="Heat Number"/>
                                            <field name="melting_process" string="Melting Process"/>
                                            <field name="material_grade_id" string="Material"/>
                                            <field name="chemical_composition_summary" string="Summary"/>
                                            <field name="carbon" string="C %"/>
                                            <field name="silicon" string="Si %"/>
                                            <field name="manganese" string="Mn %"/>
                                            <field name="chromium" string="Cr %"/>
                                            <field name="molybdenum" string="Mo %"/>
                                            <field name="vanadium" string="V %"/>
                                            <field name="nickel" string="Ni %"/>
                                            <field name="copper" string="Cu %"/>
                                            <field name="phosphorus" string="P %"/>
                                            <field name="sulfur" string="S %"/>
                                            <field name="nitrogen" string="N %"/>
                                            <field name="titanium" string="Ti %"/>
                                            <field name="magnesium" string="Mg %"/>
                                            <field name="zinc" string="Zn %"/>
                                            <field name="aluminum" string="Al %"/>
                                            <field name="tin" string="Sn %"/>
                                            <field name="cobalt" string="Co %"/>
                                            <field name="boron" string="B %"/>
                                            <field name="carbon_equivalent" string="CE %"/>
                                        </list>
                                    </field>
                                </page>
                                <page string="Mechanical Properties">
                                    <field name="batch_properties_ids" style="margin-right: 0;">
                                        <list class="ko-list-main" style="margin-right: 0;" editable="bottom">
                                            <field name="material_grade_id" string="Material"/>
                                            <field name="mechanical_properties_summary" string="Summary"/>
                                            <field name="yield_strength_0_2" string="Rp 0.2% (MPa)"/>
                                            <field name="yield_strength_1_0" string="Rp 1.0% (MPa)"/>
                                            <field name="tensile_strength" string="Rm (MPa)"/>
                                            <field name="elongation" string="A (%)" optional="hide"/>
                                            <field name="reduction_of_area" string="Area red. Z (%)" optional="hide"/>
                                            <field name="impact_energy" string="impact KV (J)"/>
                                            <field name="impact_temperature" string="T (°C)" optional="hide"/>
                                            <field name="hardness_hb" string="HB"/>
                                            <field name="hardness_hrc" string="HRC"/>
                                            <field name="hardness_hv" string="HV" optional="hide"/>
                                            <field name="young_modulus" string="E (GPa)"/>
                                            <field name="poisson_ratio" string="ν"/>
                                            <field name="density" string="ρ (kg/m³)"/>
                                            <field name="thermal_expansion" string="α (10⁻⁶/K)" optional="hide"/>
                                            <field name="thermal_conductivity" string="λ (W/m·K)" optional="hide"/>
                                            <field name="electrical_resistivity" string="ρ (Ω·m)" optional="hide"/>
                                        </list>
                                    </field>
                                </page>
                            </notebook>
                        </div>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Batches Search View -->
    <record id="view_kojto_warehouses_batches_search" model="ir.ui.view">
        <field name="name">kojto.warehouses.batches.search</field>
        <field name="model">kojto.warehouses.batches</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="name_secondary"/>
                <field name="batch_type"/>
                <field name="material_id"/>
                <field name="profile_id"/>
                <field name="part_type"/>
                <field name="store_id"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Type" name="groupby_type" context="{'group_by': 'batch_type'}"/>
                    <filter string="Material" name="groupby_material" context="{'group_by': 'material_id'}"/>
                    <filter string="Profile" name="groupby_profile" context="{'group_by': 'profile_id'}"/>
                    <filter string="Part Type" name="groupby_part_type" context="{'group_by': 'part_type'}"/>
                    <filter string="Store" name="groupby_store" context="{'group_by': 'store_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Batch Action -->
    <record id="action_kojto_warehouses_batches" model="ir.actions.act_window">
        <field name="name">Batches</field>
        <field name="res_model">kojto.warehouses.batches</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_kojto_warehouses_batches_search"/>
        <field name="context">{'default_batch_type': 'sheet'}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first batch!
            </p>
        </field>
    </record>

    <!-- Sequence for Batches -->
    <record id="sequence_kojto_warehouses_batches" model="ir.sequence">
        <field name="name">Batch Name Sequence</field>
        <field name="code">kojto.warehouses.batches</field>
        <field name="prefix">BCH.</field>
        <field name="padding">6</field>
        <field name="number_increment">1</field>
        <field name="number_next_actual">1</field>
    </record>
</odoo>
