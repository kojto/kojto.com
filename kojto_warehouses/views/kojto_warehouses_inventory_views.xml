<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inventory list View -->
    <record id="view_kojto_warehouses_inventory_list" model="ir.ui.view">
        <field name="name">kojto.warehouses.inventory.list</field>
        <field name="model">kojto.warehouses.inventory</field>
        <field name="arch" type="xml">
            <list string="Warehouse Inventory" class="ko-list-main">
                <field name="accounting_identifier_id" string="Accounting Identifier" options="{'no_create_edit': True}"/>
                <field name="name" string="Name"/>
                <field name="unit_id" string="Unit"/>
                <field name="current_quantity" string="Current Quantity"/>
                <field name="weighted_unit_price" string="Weighted Unit Price"/>
                <field name="current_value" string="Current Value"/>
            </list>
        </field>
    </record>

    <!-- Inventory Search View -->
    <record id="view_kojto_warehouses_inventory_search" model="ir.ui.view">
        <field name="name">kojto.warehouses.inventory.search</field>
        <field name="model">kojto.warehouses.inventory</field>
        <field name="arch" type="xml">
            <search string="Warehouse Inventory">
                <field name="accounting_identifier_id" string="Accounting Identifier"/>
                <field name="name" string="Name"/>
                <field name="unit_id" string="Unit"/>
                <field name="identifier" string="Identifier"/>
                <field name="identifier_type" string="Identifier Type"/>
                <group expand="0" string="Group By">
                    <filter string="Accounting Identifier" name="group_by_accounting_identifier" context="{'group_by': 'accounting_identifier_id'}"/>
                    <filter string="Unit" name="group_by_unit" context="{'group_by': 'unit_id'}"/>
                    <filter string="Identifier Type" name="group_by_identifier_type" context="{'group_by': 'identifier_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Inventory Form View -->
    <record id="view_kojto_warehouses_inventory_form" model="ir.ui.view">
        <field name="name">kojto.warehouses.inventory.form</field>
        <field name="model">kojto.warehouses.inventory</field>
        <field name="arch" type="xml">
            <form string="Warehouse Inventory" class="ko-form-main">
                <sheet>
                    <group>
                        <group>
                            <field name="accounting_identifier_id" string="Accounting Identifier" options="{'no_create_edit': True}"/>
                            <field name="name" string="Name"/>
                            <field name="identifier" string="Identifier"/>
                            <field name="identifier_type" string="Identifier Type"/>
                        </group>
                        <group>
                            <field name="unit_id" string="Unit"/>
                            <field name="current_quantity" string="Current Quantity"/>
                            <field name="weighted_unit_price" string="Weighted Unit Price"/>
                            <field name="current_value" string="Current Value"/>
                            <field name="active" string="Is Active"/>
                        </group>
                    </group>
                    <div>
                        <group string="Batches"/>
                        <field name="batch_ids" readonly="1">
                            <list>
                                <field name="active" string="Is Active"/>
                                <field name="name" string="Name"/>
                                <field name="name_secondary" string="Secondary Name"/>
                                <field name="date_issue" string="Issued On"/>
                                <field name="current_batch_quantity" string="Quantity"/>
                                <field name="current_batch_value" string="Value"/>
                                <field name="items_ids" options="{'no_create': True, 'no_open': True}">
                                    <list>
                                        <field name="name"/>
                                        <field name="current_item_quantity"/>
                                        <field name="weight"/>
                                    </list>
                                </field>
                            </list>
                        </field>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Inventory Action -->
    <record id="action_kojto_warehouses_inventory" model="ir.actions.act_window">
        <field name="name">Warehouse Inventory</field>
        <field name="res_model">kojto.warehouses.inventory</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_kojto_warehouses_inventory_list"/>
        <field name="search_view_id" ref="view_kojto_warehouses_inventory_search"/>
        <field name="domain">[('current_quantity', '>', 0)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first warehouse inventory record
            </p>
        </field>
    </record>
</odoo>
