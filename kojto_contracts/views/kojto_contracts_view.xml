<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- List View (Existing) -->
        <record id="view_kojto_contracts_list" model="ir.ui.view">
            <field name="name">kojto.contracts.list</field>
            <field name="model">kojto.contracts</field>
            <field name="arch" type="xml">
                <list class="ko-list-main" string="Contracts" duplicate="false">
                    <field name="document_in_out_type" widget="badge" decoration-primary="document_in_out_type == 'outgoing' and active"
                        decoration-info="document_in_out_type == 'incoming' and active" decoration-muted="not active" string=" " />
                    <field name="active" string=" " optional="show" widget="boolean_toggle" class="w-100 d-flex justify-content-center" />
                    <field name="name" string="Contract №" />
                    <field name="contract_type" string="Type" />
                    <field name="subject" />
                    <field name="counterparty_id" />
                    <field name="total_price" optional="show" string="Total Price" widget="monetary" options="{'currency_field': 'currency_id'}" />
                    <field name="currency_id" optional="hide" string="Currency" />
                    <field name="date_start" optional="show" string="Issue Date" />
                    <field name="date_end" optional="show" />
                    <button name="action_copy_contract" type="object" class="b-0 text-black bg-transparent fa fa-copy" title="Copy Contract" />
                    <button name="print_document_as_pdf" type="object" class="b-0 text-black bg-transparent fa fa-print" title="Print" />
                    <button name="create_annex" type="object" class="b-0 text-black bg-transparent fa fa-plus" title="Create Annex" />
                    <button name="create_invoice" type="object" class="b-0 text-black bg-transparent fa fa-file-text-o" title="Create Invoice" />
                    <button name="create_delivery" type="object" class="b-0 text-black bg-transparent fa fa-truck" title="Create Delivery" />
                </list>
            </field>
        </record>

        <!-- Form View (Existing) -->
        <record id="view_kojto_contracts_form" model="ir.ui.view">
            <field name="name">kojto.contracts.form</field>
            <field name="model">kojto.contracts</field>
            <field name="arch" type="xml">
                <form class="ko-form-main" string="Contracts">
                    <sheet class="ko-form-body">
                        <div class="d-flex justify-content-between align-items-center mb-3 ko-form-main-header-line">
                            <div class="w-100 px-0">
                                <div class="row no-gutters">
                                    <div class="col-lg-4 me-0">
                                        <div class="d-flex align-items-center">
                                            <field class="ko-form-view-title" name="contract_type" />
                                            <field class="ko-form-view-title" name="name" />
                                        </div>
                                    </div>
                                    <div class="col-lg-6 d-flex align-items-center py-2 py-md-0">
                                        <div class="d-flex align-items-center">
                                            <div class="border-start border-1 mx-2" style="height: 24px;" />
                                            <field name="document_in_out_type" widget="selection_badge" class="ko-offer-wselection-badge" />
                                            <div class="border-start border-1 mx-2" style="height: 24px;" />
                                            <field name="language_id" widget="selection_badge" class="ko-offer-wselection-badge" />
                                            <div class="border-start border-1 mx-2" style="height: 24px;" />
                                            <field name="currency_id" widget="selection_badge" class="ko-offer-wselection-badge" />
                                            <div class="border-start border-1 mx-2" style="height: 24px;" />
                                            <field name="active" optional="show" widget="boolean_toggle" />
                                        </div>
                                    </div>
                                    <div class="col-lg-2 d-flex align-items-center justify-content-end py-2 py-md-0">
                                        <div class="dropdown ms-2">
                                            <button name="dropdown_empty" class="bg-transparent border-0 d-flex align-items-center" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" aria-label="Actions" title="Create">
                                                <i>
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-folder-plus" viewBox="0 0 16 16">
                                                        <path
                                                            d="m.5 3 .04.87a2 2 0 0 0-.342 1.311l.637 7A2 2 0 0 0 2.826 14H9v-1H2.826a1 1 0 0 1-.995-.91l-.637-7A1 1 0 0 1 2.19 4h11.62a1 1 0 0 1 .996 1.09L14.54 8h1.005l.256-2.819A2 2 0 0 0 13.81 3H9.828a2 2 0 0 1-1.414-.586l-.828-.828A2 2 0 0 0 6.172 1H2.5a2 2 0 0 0-2 2m5.672-1a1 1 0 0 1 .707.293L7.586 3H2.19q-.362.002-.683.12L1.5 2.98a1 1 0 0 1 1-.98z" />
                                                        <path d="M13.5 9a.5.5 0 0 1 .5.5V11h1.5a.5.5 0 1 1 0 1H14v1.5a.5.5 0 1 1-1 0V12h-1.5a.5.5 0 0 1 0-1H13V9.5a.5.5 0 0 1 .5-.5" />
                                                    </svg>
                                                </i>
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="overflow-x: hidden;">
                                                <button name="action_copy_contract" string="Copy Contract" type="object" class="dropdown-item" />
                                                <button name="create_annex" string="Create Annex" type="object" class="dropdown-item" />
                                                <button name="create_invoice" string="Create Invoice" type="object" class="dropdown-item" />
                                                <button name="create_delivery" string="Create Delivery" type="object" class="dropdown-item" />
                                                <button name="action_import_contract_content" string="Import Content" type="object" class="dropdown-item"/>
                                            </div>
                                        </div>
                                        <button name="print_document_as_pdf" class="bg-transparent border-0 d-flex align-items-center" type="object" title="Print">
                                            <i>
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                                    <path d="M2.5 8a.5.5 0 1 0 0-1 .5.5 0 0 0 0 1" />
                                                    <path
                                                        d="M5 1a2 2 0 0 0-2 2v2H2a2 2 0 0 0-2 2v3a2 2 0 0 0 2 2h1v1a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2v-1h1a2 2 0 0 0 2-2V7a2 2 0 0 0-2-2h-1V3a2 2 0 0 0-2-2zM4 3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1v2H4zm1 5a2 2 0 0 0-2 2v1H2a1 1 0 0 1-1-1V7a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v3a1 1 0 0 1-1 1h-1v-1a2 2 0 0 0-2-2zm7 2v3a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1v-3a1 1 0 0 1 1-1h6a1 1 0 0 1 1 1" />
                                                </svg>
                                            </i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <separator class="separator-slim-top" />
                        <div class="row">
                            <group class="col-lg-6">
                                <field name="subcode_id" options="{'no_create_edit': True, 'no_open': True}" />
                                <field name="subject" />
                                <field name="program" />
                                <field name="attachments" widget="many2many_binary" invisible="id == False" />
                            </group>
                            <group class="col-lg-6">
                                <field name="parent_contract_id" invisible='parent_contract_id == False' />
                                <field name="date_start" />
                                <field name="date_end" />
                                <field name="counterpartys_reference" />
                                <field name="payment_terms_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                <field name="incoterms_address" />
                                <field name="incoterms_id" />
                            </group>
                        </div>
                        <separator class="col-lg-12 separator" />
                        <div class="row">
                            <div class="col-lg-6">
                                <h2 style="font-size: 18px;" label="0" invisible="document_in_out_type != 'outgoing'">Client</h2>
                                <h2 style="font-size: 18px;" label="0" invisible="document_in_out_type != 'incoming'">Contractor</h2>
                                <group class="col-lg-12">
                                    <field name="company_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" domain="[('res_company_id', '=', company_id)]" />
                                    <field name="company_name_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <field name="company_address_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <field name="company_email_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <field name="company_phone_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <field name="company_tax_number_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <field name="company_registration_number"/>
                                    <field name="company_bank_account_id" domain="[('contact_id', '=', company_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                </group>
                            </div>
                            <div class="col-lg-6 mb-auto" style="margin-bottom: auto">
                                <h2 style="font-size: 18px;" invisible="document_in_out_type != 'outgoing'">Contractor</h2>
                                <h2 style="font-size: 18px;" invisible="document_in_out_type != 'incoming'">Client</h2>
                                <group class="col-lg-12">
                                    <field name="counterparty_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <field name="counterparty_name_id" domain="[('contact_id', '=', counterparty_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <field name="counterparty_address_id" domain="[('contact_id', '=', counterparty_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <field name="counterparty_email_id" domain="[('contact_id', '=', counterparty_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <field name="counterparty_phone_id" domain="[('contact_id', '=', counterparty_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <field name="counterparty_tax_number_id" domain="[('contact_id', '=', counterparty_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <field name="counterparty_bank_account_id" domain="[('contact_id', '=', counterparty_id)]" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                    <div class="o_form_label">Registration Number</div>
                                    <div class="d-flex align-items-center justify-content-start gap-1">
                                        <field name="counterparty_registration_number" class="w-auto mb-0" />
                                        <span>/</span>
                                        <field name="counterparty_type" class="w-auto mb-0" />
                                        <span>/</span>
                                        <field name="counterparty_registration_number_type" class="w-auto mb-0" />
                                    </div>
                                </group>
                            </div>
                        </div>
                        <separator class="col-lg-12 separator" />
                        <field name="pre_content_text" class="mb-4" placeholder="Insert pre content text here ..." />
                        <div class="col-lg-12">
                            <field name="content" nolabel="1" context="{'default_contract_id': id}">
                                <list editable="bottom" class='one2many_table' limit="200">
                                    <field name="position" />
                                    <field name="name" />
                                    <field name="quantity" />
                                    <field name="unit_id" />
                                    <field name="unit_price" />
                                    <field name="currency_id" readonly="1" class="ms-2" options="{'no_open': True}" />
                                    <field name="pre_vat_total" />
                                    <field name="currency_id" readonly="1" class="ms-2" options="{'no_open': True}" />
                                    <field name="vat_rate" optional="hide" />
                                    <field name="vat_total" optional="hide" />
                                    <field name="currency_id" readonly="1" class="ms-2" options="{'no_open': True}" optional="hide" />
                                    <field name="total_price" optional="hide" />
                                    <field name="currency_id" readonly="1" class="ms-2" options="{'no_open': True}" optional="hide" />
                                    <button type="object" name="copy" class="b-0 text-black bg-transparent fa fa-copy" title="Copy Content Line" />
                                </list>
                            </field>
                        </div>
                        <div class="row">
                            <group class="col-lg-6 justify-content-start d-flex" />
                            <group class="col-lg-6 justify-content-end d-flex">
                                <div>
                                    <!-- Net Price Row -->
                                    <div class="col-lg-9 ms-auto d-flex align-items-center">
                                        <label for="pre_vat_total" class="me-2" />
                                        <field name="pre_vat_total" style="width: 200px" class="text-end" />
                                        <field name="currency_id" style="width: 60px" class="text-start p-1" readonly="1" options="{'no_create_edit': True, 'no_open': True}" />
                                    </div>

                                    <!-- VAT Rate Row -->
                                    <div class="col-lg-9 ms-auto d-flex align-items-center">
                                        <label for="contract_vat_rate" class="me-2" />
                                        <field name="contract_vat_rate" style="width: 200px" class="text-end" />
                                        <div style="width: 60px" class="text-start p-1">%</div>
                                    </div>

                                    <!-- VAT Row -->
                                    <div class="col-lg-9 ms-auto d-flex align-items-center">
                                        <label for="vat_total" class="me-2" />
                                        <field name="vat_total" style="width: 200px" class="text-end" />
                                        <field name="currency_id" style="width: 60px" class="text-start p-1" readonly="1" options="{'no_create_edit': True, 'no_open': True}" />
                                    </div>

                                    <!-- Total Price Row -->
                                    <div class="col-lg-9 ms-auto d-flex align-items-center">
                                        <label for="total_price" class="me-2" />
                                        <field name="total_price" style="width: 200px" class="text-end" />
                                        <field name="currency_id" style="width: 60px" class="text-start p-1" readonly="1" options="{'no_create_edit': True, 'no_open': True}" />
                                    </div>
                                </div>
                            </group>
                        </div>
                        <field name="post_content_text" class="mt-2" placeholder="Insert post content text here ..." />
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Search View -->
        <record id="view_kojto_contracts_search" model="ir.ui.view">
            <field name="name">kojto.contracts.search</field>
            <field name="model">kojto.contracts</field>
            <field name="arch" type="xml">
                <search string="Contract Documents">
                    <!-- Search Fields -->
                    <field name="name" string="Contract №"/>
                    <field name="subject" string="Subject"/>
                    <field name="program" string="Program"/>
                    <field name="counterparty_id" string="Counterparty"/>
                    <field name="counterparty_name_id" string="Counterparty Name"/>
                    <field name="counterpartys_reference" string="Reference №"/>
                    <field name="company_id" string="Company"/>
                    <field name="company_name_id" string="Company Name"/>
                    <field name="date_start" string="Start Date"/>
                    <field name="date_end" string="End Date"/>
                    <field name="total_price" string="Total Price"/>
                    <field name="contract_vat_rate" string="VAT Rate"/>
                    <field name="active" string="Active"/>
                    <field name="contract_type" string="Type"/>
                    <field name="document_in_out_type" string="Direction"/>
                    <field name="currency_id" string="Currency"/>
                    <field name="language_id" string="Language"/>
                    <field name="payment_terms_id" string="Payment Terms"/>
                    <field name="incoterms_id" string="Incoterms"/>
                    <field name="incoterms_address" string="Incoterms Address"/>
                    <field name="subcode_id" string="Subcode"/>
                    <field name="parent_contract_id" string="Parent Contract"/>
                    <field name="issued_by_name_id" string="Issued By"/>
                    <field name="pre_content_text" string="Pre Content Text"/>
                    <field name="post_content_text" string="Post Content Text"/>
                    <field name="counterparty_registration_number" string="Counterparty Reg. №"/>
                    <field name="company_registration_number" string="Company Reg. №"/>

                    <!-- Filters -->
                    <separator/>
                    <filter name="active_contracts" string="Active" domain="[('active', '=', True)]"/>
                    <filter name="inactive_contracts" string="Inactive" domain="[('active', '=', False)]"/>
                    <filter name="outgoing_contracts" string="Outgoing" domain="[('document_in_out_type', '=', 'outgoing')]"/>
                    <filter name="incoming_contracts" string="Incoming" domain="[('document_in_out_type', '=', 'incoming')]"/>

                    <separator/>
                    <filter name="contract_type_main" string="Main Contract" domain="[('contract_type', '=', 'contract')]"/>
                    <filter name="contract_type_annex" string="Annex" domain="[('contract_type', '=', 'annex')]"/>
                    <filter name="contract_type_order" string="Order" domain="[('contract_type', '=', 'order')]"/>
                    <filter name="contract_type_order_confirmation" string="Order Confirmation" domain="[('contract_type', '=', 'order_confirmation')]"/>

                    <separator/>
                    <filter name="expired_contracts" string="Expired" domain="[('date_end', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter name="valid_contracts" string="Valid" domain="[('date_end', '&gt;=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter name="today_contracts" string="Today" domain="[('date_start', '=', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter name="this_week_contracts" string="This Week" domain="[('date_start', '&gt;=', (context_today() - datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <filter name="this_month_contracts" string="This Month" domain="[('date_start', '&gt;=', context_today().strftime('%Y-%m-01')), ('date_start', '&lt;', (context_today() + datetime.timedelta(days=32)).strftime('%Y-%m-01'))]"/>
                    <filter name="last_month_contracts" string="Last Month" domain="[('date_start', '&gt;=', (context_today() + relativedelta(months=-1, day=1)).strftime('%Y-%m-01')), ('date_start', '&lt;', context_today().strftime('%Y-%m-%d'))]"/>
                    <filter name="next_week_contracts" string="Next Week" domain="[('date_start', '&gt;=', context_today().strftime('%Y-%m-%d')), ('date_start', '&lt;=', (context_today() + datetime.timedelta(days=7)).strftime('%Y-%m-%d'))]"/>
                    <filter name="next_month_contracts" string="Next Month" domain="[('date_start', '&gt;=', context_today().strftime('%Y-%m-%d')), ('date_start', '&lt;', (context_today() + datetime.timedelta(days=30)).strftime('%Y-%m-%d'))]"/>

                    <separator/>
                    <filter name="has_parent_contract" string="Has Parent Contract" domain="[('parent_contract_id', '!=', False)]"/>
                    <filter name="no_parent_contract" string="No Parent Contract" domain="[('parent_contract_id', '=', False)]"/>
                    <filter name="has_attachments" string="Has Attachments" domain="[('attachments', '!=', False)]"/>
                    <filter name="no_attachments" string="No Attachments" domain="[('attachments', '=', False)]"/>
                    <filter name="has_content" string="Has Content Lines" domain="[('content', '!=', False)]"/>
                    <filter name="no_content" string="No Content Lines" domain="[('content', '=', False)]"/>

                    <!-- Group By -->
                    <group expand="0" string="Group By">
                        <filter name="group_by_counterparty" string="Counterparty" context="{'group_by': 'counterparty_id'}"/>
                        <filter name="group_by_company" string="Company" context="{'group_by': 'company_id'}"/>
                        <filter name="group_by_type" string="Contract Type" context="{'group_by': 'contract_type'}"/>
                        <filter name="group_by_direction" string="Direction" context="{'group_by': 'document_in_out_type'}"/>
                        <filter name="group_by_currency" string="Currency" context="{'group_by': 'currency_id'}"/>
                        <filter name="group_by_language" string="Language" context="{'group_by': 'language_id'}"/>
                        <filter name="group_by_payment_terms" string="Payment Terms" context="{'group_by': 'payment_terms_id'}"/>
                        <filter name="group_by_incoterms" string="Incoterms" context="{'group_by': 'incoterms_id'}"/>
                        <filter name="group_by_subcode" string="Subcode" context="{'group_by': 'subcode_id'}"/>
                        <filter name="group_by_issued_by" string="Issued By" context="{'group_by': 'issued_by_name_id'}"/>
                        <filter name="group_by_status" string="Status" context="{'group_by': 'active'}"/>
                        <separator/>
                        <filter name="group_by_start_date" string="Start Date" context="{'group_by': 'date_start:day'}"/>
                        <filter name="group_by_start_month" string="Start Month" context="{'group_by': 'date_start:month'}"/>
                        <filter name="group_by_start_year" string="Start Year" context="{'group_by': 'date_start:year'}"/>
                        <filter name="group_by_end_date" string="End Date" context="{'group_by': 'date_end:day'}"/>
                        <filter name="group_by_end_month" string="End Month" context="{'group_by': 'date_end:month'}"/>
                        <filter name="group_by_end_year" string="End Year" context="{'group_by': 'date_end:year'}"/>
                        <separator/>
                        <filter name="group_by_vat_rate" string="VAT Rate" context="{'group_by': 'contract_vat_rate'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action (Updated) -->
        <record id="action_kojto_contracts" model="ir.actions.act_window">
            <field name="name">Contracts</field>
            <field name="res_model">kojto.contracts</field>
            <field name="view_mode">list,form</field>
        </record>
    </data>
</odoo>
