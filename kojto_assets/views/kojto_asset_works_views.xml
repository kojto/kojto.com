<odoo>
    <data>
        <!-- List View for Kojto Assets Works -->
        <record model="ir.ui.view" id="view_kojto_asset_works_list">
            <field name="name">kojto.asset.works.list</field>
            <field name="model">kojto.asset.works</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_asset_works_list" limit="100" sample="1">
                    <field name="asset_id" />
                    <field name="subcode_id" />
                    <field name="datetime_start" />
                    <field name="quantity" />
                    <field name="credited_subcode_id" />
                    <field name="value_in_BGN" />
                    <field name="value_in_EUR" />
                </list>
            </field>
        </record>
        <!-- Form View for Kojto Assets Works -->
        <record model="ir.ui.view" id="view_kojto_asset_works_form">
            <field name="name">kojto.asset.works.form</field>
            <field name="model">kojto.asset.works</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_asset_works_form">
                    <sheet class="ko-form-body">
                        <!-- Custom Header -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <!-- Left Section -->
                            <div class="d-flex align-items-center">
                                <div class="ko-form-view-title">
                                    <span>ASSET WORKS</span>
                                </div>
                            </div>
                        </div>
                        <group class="col-lg-6">
                            <field name="asset_id" />
                            <field name="subcode_id" />
                            <field name="datetime_start" />
                            <field name="comment" />
                            <field name="quantity" />
                            <field name="credited_subcode_id" />
                            <field name="value_in_BGN" />
                            <field name="value_in_EUR" />
                            <field name="create_date" readonly="1" />
                            <field name="write_date" readonly="1" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Search View for Kojto Assets Works -->
        <record model="ir.ui.view" id="view_kojto_asset_works_search">
            <field name="name">kojto.asset.works.search</field>
            <field name="model">kojto.asset.works</field>
            <field name="arch" type="xml">
                <search string="Asset Works">
                    <field name="asset_id" />
                    <field name="subcode_id" />
                    <field name="datetime_start" />
                    <filter string="Asset" name="groupby_asset_id" context="{'group_by': 'asset_id'}" />
                    <filter string="Project" name="groupby_subcode_id" context="{'group_by': 'subcode_id'}" />
                </search>
            </field>
        </record>
        <!-- Action to Open List and Form Views for Kojto Assets Works -->
        <record model="ir.actions.act_window" id="action_kojto_asset_works">
            <field name="name">Asset Works</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.asset.works</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Create your asset works records here</p>
            </field>
        </record>
    </data>
</odoo>
