<odoo>
    <data>
        <!-- List View -->
        <record model="ir.ui.view" id="view_kojto_offer_surcharges_list">
            <field name="name">kojto.offer.surcharges.list</field>
            <field name="model">kojto.offer.surcharges</field>
            <field name="arch" type="xml">
                <list limit="100" sample="1" class="ko-list-main">
                    <field name="name" optional="show" />
                    <field name="surcharge" optional="show" />
                </list>
            </field>
        </record>
        <!-- Form View -->
        <record model="ir.ui.view" id="view_kojto_offer_surcharges_form">
            <field name="name">kojto.offer.surcharges.form</field>
            <field name="model">kojto.offer.surcharges</field>
            <field name="arch" type="xml">
                <form>

                    <script type="text/javascript" src="/kojto_file_assets/static/src/js/kojto_form.js" />
                    <sheet class="ko-form-body">
                        <!-- Header start -->
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <!-- Left div -->
                            <div class="d-flex">
                                <div class="ko-form-view-title">Surcharges</div>
                            </div>
                        </div>
                        <!-- Header end -->
                        <separator class="col-lg-12 separator" />
                        <group class="col-lg-6 mx-auto">
                            <field name="name" />
                            <field name="surcharge" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Search View -->
        <record model="ir.ui.view" id="view_kojto_offer_surcharges_search">
            <field name="name">kojto.offer.surcharges.search</field>
            <field name="model">kojto.offer.surcharges</field>
            <field name="arch" type="xml">
                <search string="Surcharges">
                    <field name="name" />
                    <field name="surcharge" />
                </search>
            </field>
        </record>
        <!-- Action -->
        <record model="ir.actions.act_window" id="action_kojto_offer_surcharges">
            <field name="name">Surcharges</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.offer.surcharges</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Add Surcharge</p>
            </field>
        </record>
    </data>
</odoo>
