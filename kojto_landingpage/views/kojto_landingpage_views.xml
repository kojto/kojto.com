        <!-- Form Views -->
        <record model="ir.ui.view" id="view_kojto_landingpage_form">
            <field name="name">kojto.landingpage.form</field>
            <field name="model">kojto.landingpage</field>
            <field name="arch" type="xml">
                <form class="ko-form-main" create="False">
                    <style>
                        .o_navbar a.o-dropdown-item {
                        display: none !important;
                        }

                        .o_menu_sections {
                        display: none !important;
                        }

                        .o_content {
                        overflow-x: hidden !important;
                        }

                        .o_form_sheet_bg {
                        margin: auto;
                        }

                        .o_control_panel {
                        display: none !important;
                        }

                        .o_form_nosheet {
                        padding: 0px !important;
                        background-color: #f8f9fa;
                        }

                        .o_content {
                        background-color: #f8f9fa;
                        overflow-x: hidden !important
                        }

                        h1 {
                        margin: 10px 0 20px;
                        color: #3f51b4ff;
                        font-family: 'Roboto Condensed', Arial, sans-serif;
                        font-weight: 500;
                        font-size: 18px
                        }

                        .instruction_text {
                        margin: 10px 0;
                        color: #3f51b4ff;
                        font-family: 'Roboto Condensed', Arial, sans-serif;
                        font-weight: 500;
                        font-size: 14px
                        }

                        .container {
                        max-width: 1400px;
                        margin: auto;
                        opacity: 0;
                        animation: fadeIn 0.5s ease forwards;
                        animation-delay: 0.1s;
                        }

                        @keyframes fadeIn {
                        to {
                        opacity: 1;
                        }
                        }

                        .container_subheader {
                        background-color: #3f51b438;
                        height: 80px;
                        border-bottom: 1px solid #3f51b44d
                        }

                        .container_footer {
                        background-color: transparent;
                        }

                        .landing_page {
                        background: #fff;
                        padding: 10px
                        }

                        .landing_page .landing_page_content {
                        padding: 0;
                        display: flex;
                        flex-wrap: wrap;
                        justify-content: flex-start;
                        align-content: flex-start;
                        height: auto !important
                        }

                        .landing_page .landing_page_content .landing_page_item {
                        flex: 1 1 200px;
                        margin: 2rem 0;
                        text-align: center
                        }

                        @media (max-width:900px) {
                        .landing_page .landing_page_content .landing_page_item {
                        flex: 1 1 150px
                        }
                        }

                        @media (max-width:500px) {
                        .landing_page .landing_page_content .landing_page_item {
                        flex: 1 1 100px
                        }
                        }

                        .landing_page_text {
                        display: block;
                        text-align: center;
                        font-size: 1rem;
                        text-transform: uppercase;
                        font-family: 'Roboto Condensed', Arial, sans-serif;
                        font-weight: 500;
                        margin-top: 15px
                        }

                        .landing_page_icon {
                        font-size: 3em;
                        width: 100px;
                        height: auto;
                        display: block;
                        text-align: center;
                        margin: 5px auto
                        }

                        .landing_page_button {
                        background: 0 0 !important;
                        border: 0 solid transparent !important;
                        color: var(--o-cc2-btn-primary)
                        }

                        .landing_page_svg_icon {
                        width: 40px;
                        stroke: #fff;
                        stroke-width: .5;
                        fill: currentColor
                        }

                        .o_web_client > .o_action_manager > .o_action .o_content {
                        background-color: white;
                        }

