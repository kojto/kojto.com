        <!-- Action to Open the Form View -->
        <record model="ir.actions.act_window" id="action_kojto_landingpage">
            <field name="name">Home</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.landingpage</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_kojto_landingpage_form" />
            <field name="context">{}</field>
        </record>
        <record id="server_action_open_landingpage" model="ir.actions.server">
            <field name="name">Home</field>
            <field name="model_id" ref="model_kojto_landingpage" />
            <field name="state">code</field>
            <field name="code"> action = env['kojto.landingpage'].open_landingpage() </field>
        </record>
        <menuitem name="Home" id="menu_kojto_landingpage" sequence="1" action="server_action_open_landingpage" />
