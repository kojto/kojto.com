<!-- kojto_contacts/views/kojto_contacts_views.xml -->
<odoo>
    <data>
        <!-- List View for KojtoContacts -->
        <record model="ir.ui.view" id="view_kojto_contacts_list">
            <field name="name">kojto.contacts.list</field>
            <field name="model">kojto.contacts</field>
            <field name="arch" type="xml">
                <list class="ko-list-main view_kojto_contacts_list" limit="100" default_order="res_company_id asc, name desc" decoration-success="res_company_id == True" sample="1">
                    <field name="active" string=" " optional="show" widget="boolean_toggle" class="w-100 d-flex justify-content-center" />
                    <field name="client_number" optional="show" string="Clinet â„–" widget="number" options="{'digits': [6, 0]}" />
                    <field name="title" optional="show" />
                    <field name="name" optional="show" />
                    <field name="contact_type" optional="show" widget="badge" />
                    <field name="title" optional="show" />
                    <field name="is_non_EU" optional="show" widget="boolean_toggle" readonly="1" />
                    <field name="current_credit_limit" optional="show" />
                    <field name="comment" optional="show" />
                    <field name="registration_number" optional="show" />
                    <field name="registration_number_type" optional="show" />
                    <field name="contact_tax_number_summary" optional="show" />
                </list>
            </field>
        </record>

        <!-- Form View for KojtoContacts -->
        <record model="ir.ui.view" id="view_kojto_contacts_form">
            <field name="name">kojto.contacts.form</field>
            <field name="model">kojto.contacts</field>
            <field name="arch" type="xml">
                <form class="ko-form-main view_kojto_contacts_form">
                    <sheet class="ko-form-body">
                        <div class="d-flex justify-content-between align-items-center ko-form-main-header-line">
                            <div class="w-100 px-0">
                                <div class="row no-gutters">
                                    <div class="col-lg-4 me-0"></div>
                                    <div class="col-lg-4 d-flex justify-content-center"></div>
                                    <div class="col-lg-4 d-flex align-items-center justify-content-end"></div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <group class="col-lg-4">
                                <field name="name"/>
                                <field name="contact_type" />
                                <field name="client_number" widget="number" options="{'digits': [6, 0]}" />
                                <field name="active" widget="boolean_toggle" />
                                <field name="is_non_EU" widget="boolean_toggle" />
                                <field name="registration_number_type" />
                                <field name="registration_number" />
                            </group>
                            <group class="col-lg-4">
                                <field name="title" />
                                <field name="website" widget="url" />
                                <field name="comment" widget="text" />
                            </group>
                            <group class="col-lg-4" invisible="id != 1">
                                <field name="language_id" widget="selection_badge" class="ko-offer-wselection-badge" invisible="id != 1" />
                                <field name="currency_id" widget="selection_badge" class="ko-offer-wselection-badge" invisible="id != 1" />
                                <field name="res_company_id" />
                                <field name="company_logo" filename="company_logo_filename" readoly="1" invisible="id != 1"/>
                                <field name="company_logo_filename" invisible="1" />
                                <separator string="AI Configuration" invisible="id != 1" />
                                <field name="ai_api_url" invisible="id != 1" />
                                <field name="ai_api_key" invisible="id != 1" password="True" />
                            </group>
                        </div>

                        <notebook>
                            <page string="Names">
                                <field name="names" nolabel='1' context="{'default_company_id': id}">
                                    <list editable="bottom">
                                        <field name="active" widget="boolean_toggle" />
                                        <field name="name" />
                                        <field name="language_id" />
                                    </list>
                                </field>
                            </page>
                            <page string="Related people">
                                <field name="people_rel_ids" nolabel="1" context="{'default_company_id': id}">
                                    <list editable="bottom">
                                        <field name="person_id" context="{'default_contact_type': 'person'}" />
                                        <field name="position" />
                                    </list>
                                </field>
                            </page>
                            <page string="Addresses">
                                <field name="addresses" nolabel="1" context="{'default_contact_id': id}">
                                    <list editable="bottom">
                                        <field name="active" string="Is Active" widget="boolean_toggle" />
                                        <field name="country_id" options="{'no_create_edit': True, 'no_open': True, 'no_create': True}" />
                                        <field name="region" />
                                        <field name="city" />
                                        <field name="postal_code" />
                                        <field name="address" />
                                        <field name="language_id" />
                                    </list>
                                </field>
                            </page>
                            <page string="Phones">
                                <field name="phones" nolabel="1" context="{'default_contact_id': id}">
                                    <list editable="bottom">
                                        <field name="active" string="Is Active" widget="boolean_toggle" />
                                        <field name="name" string="Phone" />
                                    </list>
                                </field>
                            </page>
                            <page string="Emails">
                                <field name="emails" nolabel="1" context="{'default_contact_id': id}">
                                    <list editable="bottom">
                                        <field name="active" string="Is Active" widget="boolean_toggle" />
                                        <field name="name" string=" Email" />
                                    </list>
                                </field>
                            </page>
                            <page string="Bank Accounts">
                                <field name="bank_accounts" nolabel="1" context="{'default_contact_id': id}">
                                    <list editable="bottom">
                                        <field name="active" widget="boolean_toggle" string="Is Active"/>
                                        <field name="bank_id" />
                                        <field name="BIC" />
                                        <field name="IBAN" width="250" />
                                        <field name="currency_id" />
                                        <field name="account_type" />
                                        <field name="description" />
                                        <field name="ref_number" />
                                    </list>
                                </field>
                            </page>
                            <page string="Tax numbers">
                                <field name="tax_numbers" nolabel='1' context="{'default_company_id': id}">
                                    <list editable="bottom">
                                        <field name="active" string="Is Active" widget="boolean_toggle" />
                                        <field name="name" string="Tax Number Name" />
                                        <field name="tax_number" string="Tax Number" />
                                        <field name="description" string="Description" />
                                    </list>
                                </field>
                            </page>
                            <page string="Certificates">
                                <field name="certificates" nolabel='1' context="{'default_contact_id': id}">
                                    <list editable="bottom">
                                        <field name="active" widget="boolean_toggle" string="Is Active" />
                                        <field name="name" string="Certificate" />
                                        <field name="description" string="Description" />
                                        <field name="date_start" string="Start Date" />
                                        <field name="date_end" string="End Date" />
                                    </list>
                                </field>
                            </page>
                            <page string="Credit Limit">
                                <field name="credit_limit" nolabel='1' context="{'default_contact_id': id}">
                                    <list editable="bottom">
                                        <field name="credit_limit" />
                                        <field name="currency_id" options="{'no_open': True}" />
                                        <field name="datetime_start" />
                                        <field name="datetime_end" />
                                        <field name="insured_by" />
                                        <field name="attachment" widget="binary" />
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Search View for KojtoContacts -->
        <record model="ir.ui.view" id="view_kojto_contacts_search">
            <field name="name">kojto.contacts.search</field>
            <field name="model">kojto.contacts</field>
            <field name="arch" type="xml">
                <search string="Contacts">
                    <field name="name" />
                    <field name="contact_type" />
                    <field name="registration_number" />
                    <field name="client_number" />
                </search>
            </field>
        </record>
        <!-- Action to Return Model Views -->
        <record model="ir.actions.act_window" id="action_kojto_contacts">
            <field name="name">Contacts</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">kojto.contacts</field>
            <field name="view_mode">list,form</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Add Contacts</p>
            </field>
        </record>




    </data>
</odoo>
