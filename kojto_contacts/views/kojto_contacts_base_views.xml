<!-- kojto_contacts/views/kojto_contacts_base_views.xml -->
<odoo>
    <data>
        <!-- Inherited Bank Accounts List View to add contact_id field -->
        <record model="ir.ui.view" id="view_kojto_base_bank_accounts_list_inherit">
            <field name="name">kojto.base.bank.accounts.list.inherit</field>
            <field name="model">kojto.base.bank.accounts</field>
            <field name="inherit_id" ref="kojto_base.view_kojto_base_bank_accounts_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="after">
                    <field name="contact_id" optional="show"/>
                </xpath>
            </field>
        </record>

        <!-- Inherited Bank Accounts Form View to add contact_id field -->
        <record model="ir.ui.view" id="view_kojto_base_bank_accounts_form_inherit">
